---
import MainGridLayout from "@layouts/MainGridLayout.astro";
import { url } from "@utils/url-utils";

const tools = [
	{
		name: "Teleprompter Studio",
		description:
			"Tu estudio profesional de lectura en pantalla. Velocidad precisa, espejo, focus mode, atajos de teclado y countdown.",
		href: url("/herramientas/teleprompter/"),
		iconType: "teleprompter",
		badge: "Pro",
		features: ["Modo espejo", "Focus mode", "Atajos de teclado", "Countdown"],
		color: "220",
	},
	{
		name: "Acortador de URLs",
		description:
			"Acorta, organiza y gestiona tus enlaces. QR codes al instante, historial con estad√≠sticas y exportaci√≥n.",
		href: url("/herramientas/acortador/"),
		iconType: "link",
		badge: "Sin publicidad",
		features: ["QR Codes", "Categor√≠as", "Sin publicidad", "Exportar JSON"],
		color: "280",
	},
];
---

<MainGridLayout title="Herramientas" description="Herramientas premium para creadores">
  <main id="main-tools">
    <section class="tools-hub">

      <!-- HEADER -->
      <header class="tools-header">
        <div class="header-icon-wrap" aria-hidden="true">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" class="header-icon">
            <defs>
              <linearGradient id="headerGrad" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:oklch(0.7 0.2 var(--hue));stop-opacity:1" />
                <stop offset="100%" style="stop-color:oklch(0.6 0.22 calc(var(--hue) + 40));stop-opacity:1" />
              </linearGradient>
              <filter id="headerGlow">
                <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
                <feMerge>
                  <feMergeNode in="coloredBlur"/>
                  <feMergeNode in="SourceGraphic"/>
                </feMerge>
              </filter>
            </defs>
            <polygon points="50,15 75,28 75,54 50,67 25,54 25,28"
                     fill="none" stroke="url(#headerGrad)" stroke-width="2"
                     opacity="0.5" class="hex-outline"/>
            <circle cx="50" cy="41" r="12" fill="url(#headerGrad)"
                    filter="url(#headerGlow)" opacity="0.7" class="center-glow"/>
            <path d="M 50 33 L 52 38 L 57 39 L 53 43 L 54 48 L 50 45 L 46 48 L 47 43 L 43 39 L 48 38 Z"
                  fill="white" opacity="0.9" class="star"/>
            <circle cx="35" cy="30" r="2" fill="url(#headerGrad)" class="dot d1" opacity="0.6"/>
            <circle cx="65" cy="30" r="2" fill="url(#headerGrad)" class="dot d2" opacity="0.6"/>
            <circle cx="35" cy="52" r="2" fill="url(#headerGrad)" class="dot d3" opacity="0.6"/>
            <circle cx="65" cy="52" r="2" fill="url(#headerGrad)" class="dot d4" opacity="0.6"/>
          </svg>
        </div>

        <div class="header-eyebrow">Suite de herramientas</div>
        <h1 class="tools-title">Herramientas</h1>
        <p class="tools-subtitle">
          Herramientas profesionales dise√±adas para potenciar tu creatividad y flujo de trabajo.
        </p>

        <div class="tools-pills" role="list">
          <span role="listitem" class="pill">
            <span class="pill-dot"></span>
            {tools.length} herramientas
          </span>
          <span role="listitem" class="pill">
            <span class="pill-dot"></span>
            100% gratuitas
          </span>
          <span role="listitem" class="pill">
            <span class="pill-dot"></span>
            Sin publicidad
          </span>
        </div>
      </header>

      <!-- GRID -->
      <div class="tools-grid" role="list">
        {tools.map((tool, i) => (
          <a
            class="tool-card"
            href={tool.href}
            style={`--i: ${i}; --hue-tool: ${tool.color};`}
            role="listitem"
            aria-label={`${tool.name} ‚Äî ${tool.description}`}
          >
            <!-- Glow BG -->
            <div class="card-glow" aria-hidden="true"></div>

            <!-- Badge -->
            <span class="card-badge" aria-label={`Etiqueta: ${tool.badge}`}>
              {tool.badge}
            </span>

            <!-- Icon -->
            <div class="card-icon" aria-hidden="true">
              {tool.iconType === "teleprompter" && (
                <svg viewBox="0 0 64 64" class="icon-svg tele-icon">
                  <!-- Monitor -->
                  <rect x="8" y="10" width="48" height="32" rx="4" class="monitor-body"/>
                  <rect x="11" y="13" width="42" height="26" rx="2" class="monitor-screen"/>
                  <!-- Text lines -->
                  <rect x="16" y="20" width="22" height="2.5" rx="1.25" class="tele-line l1"/>
                  <rect x="16" y="25.5" width="32" height="2.5" rx="1.25" class="tele-line l2"/>
                  <rect x="16" y="31" width="27" height="2.5" rx="1.25" class="tele-line l3"/>
                  <!-- Arrow -->
                  <path d="M 46 22 L 50 26 M 50 26 L 54 22 M 50 26 L 50 36"
                    stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="tele-arrow"/>
                  <!-- Stand -->
                  <rect x="28" y="42" width="8" height="4" rx="1" class="stand-neck"/>
                  <rect x="22" y="46" width="20" height="3" rx="1.5" class="stand-base"/>
                  <!-- Rec dot -->
                  <circle cx="14" cy="15" r="2" class="rec-dot"/>
                </svg>
              )}

              {tool.iconType === "link" && (
                <svg viewBox="0 0 64 64" class="icon-svg link-icon">
                  <!-- Long URL bar -->
                  <rect x="6" y="16" width="52" height="10" rx="5" class="url-bar long-bar"/>
                  <rect x="10" y="19" width="8" height="4" rx="2" class="url-chunk c1"/>
                  <rect x="20" y="19" width="12" height="4" rx="2" class="url-chunk c2"/>
                  <rect x="34" y="19" width="9" height="4" rx="2" class="url-chunk c3"/>
                  <rect x="45" y="19" width="9" height="4" rx="2" class="url-chunk c4"/>
                  <!-- Arrow path -->
                  <path d="M 20 30 Q 10 38 10 38 Q 10 48 16 48"
                    stroke-width="2" stroke-linecap="round" fill="none" class="arrow-path"/>
                  <path d="M 44 30 Q 54 38 54 38 Q 54 48 48 48"
                    stroke-width="2" stroke-linecap="round" fill="none" class="arrow-path"/>
                  <!-- Short URL bar -->
                  <rect x="14" y="38" width="36" height="10" rx="5" class="url-bar short-bar"/>
                  <circle cx="23" cy="43" r="3" fill="none" stroke-width="1.8" class="link-ring lr1"/>
                  <circle cx="29" cy="43" r="3" fill="none" stroke-width="1.8" class="link-ring lr2"/>
                  <line x1="25" y1="43" x2="27" y2="43" stroke-width="1.8" stroke-linecap="round" class="link-bridge"/>
                  <rect x="34" y="41.5" width="12" height="3" rx="1.5" class="short-text-bar"/>
                </svg>
              )}
            </div>

            <!-- Content -->
            <div class="card-content">
              <h2 class="card-title">{tool.name}</h2>
              <p class="card-desc">{tool.description}</p>
            </div>

            <!-- Features -->
            <ul class="card-features" role="list">
              {tool.features.map((f) => (
                <li class="feature-tag" role="listitem">
                  <span class="feature-dot" aria-hidden="true">‚ú¶</span>
                  {f}
                </li>
              ))}
            </ul>

            <!-- CTA -->
            <div class="card-cta" aria-hidden="true">
              <span class="cta-text">Abrir herramienta</span>
              <span class="cta-arrow">
                <svg viewBox="0 0 20 20" fill="none" width="16" height="16">
                  <path d="M4 10h12M11 5l5 5-5 5" stroke="currentColor" stroke-width="2"
                    stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
            </div>
          </a>
        ))}
      </div>

      <!-- FOOTER INFO -->
      <footer class="tools-footer">
        <div class="footer-card">
          <span class="footer-icon" aria-hidden="true">üîí</span>
          <p>
            Todas las herramientas funcionan directamente en tu navegador.
            <strong>Tus datos nunca salen de tu dispositivo.</strong>
          </p>
        </div>
      </footer>

    </section>
  </main>
</MainGridLayout>

<style>
/* =============================================
   TOKENS & THEME
   ============================================= */
.tools-hub {
  --ease-spring: cubic-bezier(0.34, 1.56, 0.64, 1);
  --ease-out: cubic-bezier(0.16, 1, 0.3, 1);

  --text-primary: oklch(0.15 0.01 var(--hue));
  --text-secondary: oklch(0.45 0.02 var(--hue));
  --text-muted: oklch(0.6 0.02 var(--hue));
  --border: oklch(0.88 0.01 var(--hue));
  --bg-tag: oklch(0.95 0.01 var(--hue));
  --card-surface: #fff;
  --card-shadow: 0 2px 12px oklch(0.4 0.1 var(--hue) / 0.08),
                 0 1px 3px oklch(0.4 0.1 var(--hue) / 0.06);
  --card-shadow-hover: 0 16px 40px oklch(0.4 0.1 var(--hue) / 0.14),
                       0 4px 12px oklch(0.4 0.1 var(--hue) / 0.1);

  display: flex;
  flex-direction: column;
  gap: 2rem;
}

:global(.dark) .tools-hub {
  --text-primary: oklch(0.95 0.01 var(--hue));
  --text-secondary: oklch(0.7 0.03 var(--hue));
  --text-muted: oklch(0.55 0.03 var(--hue));
  --border: oklch(0.28 0.03 var(--hue));
  --bg-tag: oklch(0.2 0.03 var(--hue));
  --card-surface: oklch(0.14 0.02 var(--hue));
  --card-shadow: 0 2px 12px #0005, 0 1px 3px #0004;
  --card-shadow-hover: 0 16px 40px #0008, 0 4px 12px #0006;
}

/* =============================================
   HEADER
   ============================================= */
.tools-header {
  text-align: center;
  padding: 1rem 0 0.25rem;
  animation: fadeUp 0.6s var(--ease-out) both;
}

.header-icon-wrap {
  display: inline-flex;
  margin-bottom: 1rem;
  color: oklch(0.6 0.2 var(--hue));
}

.header-icon {
  width: 80px;
  height: 80px;
  animation: headerFloat 4s ease-in-out infinite;
  filter: drop-shadow(0 6px 20px oklch(0.7 0.18 var(--hue) / 0.3));
}

@keyframes headerFloat {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8px); }
}

.hex-outline {
  animation: hexBreath 4s ease-in-out infinite;
  transform-origin: 50px 41px;
}
@keyframes hexBreath {
  0%, 100% { transform: scale(1); opacity: 0.5; }
  50% { transform: scale(1.05); opacity: 0.7; }
}

.center-glow {
  animation: glowPulse 3s ease-in-out infinite;
  transform-origin: 50px 41px;
}
@keyframes glowPulse {
  0%, 100% { transform: scale(1); opacity: 0.7; }
  50% { transform: scale(1.1); opacity: 0.9; }
}

.star {
  animation: starSpin 12s linear infinite;
  transform-origin: 50px 41px;
}
@keyframes starSpin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/*
  Cada dot se mueve ALEJ√ÅNDOSE del centro (50, 41).
  d1 (35,30) ‚Üí arriba-izquierda  ‚Üí translate(-2px, -2px)
  d2 (65,30) ‚Üí arriba-derecha    ‚Üí translate( 2px, -2px)
  d3 (35,52) ‚Üí abajo-izquierda   ‚Üí translate(-2px,  2px)
  d4 (65,52) ‚Üí abajo-derecha     ‚Üí translate( 2px,  2px)
  transform-origin apunta al propio centro del dot para que
  el scale tambi√©n crezca hacia afuera y no hacia la estrella.
*/
.dot { animation: dotPulse 3s ease-in-out infinite; }

.d1 {
  animation-delay: 0s;
  transform-origin: 35px 30px;
  --dx: -2px; --dy: -2px;
}
.d2 {
  animation-delay: 0.75s;
  transform-origin: 65px 30px;
  --dx: 2px; --dy: -2px;
}
.d3 {
  animation-delay: 1.5s;
  transform-origin: 35px 52px;
  --dx: -2px; --dy: 2px;
}
.d4 {
  animation-delay: 2.25s;
  transform-origin: 65px 52px;
  --dx: 2px; --dy: 2px;
}

@keyframes dotPulse {
  0%, 100% {
    opacity: 0.6;
    transform: scale(1) translate(0, 0);
  }
  50% {
    opacity: 1;
    transform: scale(1.3) translate(var(--dx), var(--dy));
  }
}

.header-eyebrow {
  font-size: 0.72rem;
  font-weight: 700;
  letter-spacing: 0.12em;
  text-transform: uppercase;
  color: oklch(0.6 0.2 var(--hue));
  margin-bottom: 0.4rem;
}

.tools-title {
  font-size: clamp(2rem, 5vw, 2.8rem);
  font-weight: 800;
  letter-spacing: -0.03em;
  line-height: 1.1;
  margin-bottom: 0.6rem;
  background: linear-gradient(
    135deg,
    oklch(0.55 0.22 var(--hue)),
    oklch(0.65 0.2 calc(var(--hue) + 50)),
    oklch(0.55 0.22 var(--hue))
  );
  background-size: 200%;
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  animation: shimmer 5s ease-in-out infinite;
}

@keyframes shimmer {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}

:global(.dark) .tools-title {
  background: linear-gradient(
    135deg,
    oklch(0.75 0.2 var(--hue)),
    oklch(0.82 0.18 calc(var(--hue) + 50)),
    oklch(0.75 0.2 var(--hue))
  );
  background-size: 200%;
  -webkit-background-clip: text;
  background-clip: text;
}

.tools-subtitle {
  font-size: 0.95rem;
  line-height: 1.6;
  color: var(--text-secondary);
  max-width: 30rem;
  margin: 0 auto 1rem;
  padding: 0 1rem;
}

.tools-pills {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.pill {
  display: inline-flex;
  align-items: center;
  gap: 0.35rem;
  padding: 0.3rem 0.8rem;
  font-size: 0.78rem;
  font-weight: 600;
  border-radius: 999px;
  background: oklch(0.7 0.15 var(--hue) / 0.1);
  color: oklch(0.5 0.18 var(--hue));
  border: 1px solid oklch(0.7 0.15 var(--hue) / 0.2);
}

:global(.dark) .pill {
  background: oklch(0.7 0.15 var(--hue) / 0.15);
  color: oklch(0.75 0.15 var(--hue));
  border-color: oklch(0.7 0.15 var(--hue) / 0.25);
}

.pill-dot {
  width: 5px;
  height: 5px;
  border-radius: 50%;
  background: oklch(0.6 0.2 var(--hue));
  animation: dotBlink 2s ease-in-out infinite;
}

.pill:nth-child(2) .pill-dot { animation-delay: 0.66s; }
.pill:nth-child(3) .pill-dot { animation-delay: 1.33s; }

@keyframes dotBlink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.3; }
}

/* =============================================
   GRID
   ============================================= */
.tools-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 1rem;
}

@media (min-width: 700px) {
  .tools-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 1.25rem;
  }
}

/* =============================================
   CARD
   ============================================= */
.tool-card {
  position: relative;
  display: flex;
  flex-direction: column;
  gap: 1rem;
  padding: 1.5rem;
  background: var(--card-surface);
  border: 1px solid var(--border);
  border-radius: 1.25rem;
  text-decoration: none;
  color: inherit;
  overflow: hidden;
  box-shadow: var(--card-shadow);
  transition: transform 0.4s var(--ease-spring),
              box-shadow 0.4s var(--ease-out),
              border-color 0.3s ease;
  animation: cardIn 0.5s var(--ease-out) both;
  animation-delay: calc(0.1s * var(--i));
  isolation: isolate;
}

@media (min-width: 768px) {
  .tool-card { padding: 2rem; }
}

@keyframes cardIn {
  from { opacity: 0; transform: translateY(18px); }
  to   { opacity: 1; transform: translateY(0); }
}

.card-glow {
  position: absolute;
  inset: -1px;
  border-radius: inherit;
  background: radial-gradient(
    circle at 50% 0%,
    oklch(0.7 0.2 var(--hue-tool, var(--hue)) / 0.12),
    transparent 60%
  );
  opacity: 0;
  transition: opacity 0.4s ease;
  pointer-events: none;
  z-index: 0;
}

.tool-card:hover .card-glow { opacity: 1; }

.tool-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--card-shadow-hover);
  border-color: oklch(0.7 0.15 var(--hue-tool, var(--hue)) / 0.3);
}

.tool-card:focus-visible {
  outline: 3px solid oklch(0.6 0.2 var(--hue));
  outline-offset: 3px;
}

:global(.dark) .tool-card:hover {
  border-color: oklch(0.7 0.15 var(--hue-tool, var(--hue)) / 0.4);
}

@media (hover: none) {
  .tool-card:hover { transform: none; }
  .tool-card:active { transform: scale(0.985); }
}

.card-badge {
  position: absolute;
  top: 1rem;
  right: 1rem;
  padding: 0.28rem 0.65rem;
  font-size: 0.68rem;
  font-weight: 700;
  letter-spacing: 0.06em;
  text-transform: uppercase;
  border-radius: 999px;
  background: oklch(0.7 0.18 var(--hue-tool, var(--hue)) / 0.12);
  color: oklch(0.5 0.2 var(--hue-tool, var(--hue)));
  border: 1px solid oklch(0.7 0.18 var(--hue-tool, var(--hue)) / 0.25);
  z-index: 2;
}

:global(.dark) .card-badge {
  background: oklch(0.7 0.18 var(--hue-tool, var(--hue)) / 0.2);
  color: oklch(0.8 0.16 var(--hue-tool, var(--hue)));
  border-color: oklch(0.7 0.18 var(--hue-tool, var(--hue)) / 0.3);
}

/* =============================================
   ICON
   ============================================= */
.card-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80px;
  height: 80px;
  border-radius: 1rem;
  background: oklch(0.7 0.15 var(--hue-tool, var(--hue)) / 0.1);
  border: 1px solid oklch(0.7 0.15 var(--hue-tool, var(--hue)) / 0.15);
  flex-shrink: 0;
  position: relative;
  z-index: 1;
  transition: transform 0.4s var(--ease-spring);
}

.tool-card:hover .card-icon {
  transform: scale(1.06) rotate(-2deg);
}

:global(.dark) .card-icon {
  background: oklch(0.7 0.15 var(--hue-tool, var(--hue)) / 0.15);
  border-color: oklch(0.7 0.15 var(--hue-tool, var(--hue)) / 0.2);
}

.icon-svg {
  width: 48px;
  height: 48px;
  overflow: visible;
}

/* =============================================
   TELEPROMPTER ICON SVG STYLES
   ============================================= */
.monitor-body {
  fill: oklch(0.7 0.18 var(--hue-tool, var(--hue)));
  opacity: 0.9;
}
.monitor-screen {
  fill: oklch(0.15 0.05 var(--hue-tool, var(--hue)));
}
.tele-line {
  fill: oklch(0.75 0.16 var(--hue-tool, var(--hue)));
}
.l1 { opacity: 0.9; animation: lineScroll 2.5s ease-in-out infinite; }
.l2 { opacity: 0.65; animation: lineScroll 2.5s ease-in-out infinite 0.2s; }
.l3 { opacity: 0.4;  animation: lineScroll 2.5s ease-in-out infinite 0.4s; }

@keyframes lineScroll {
  0%, 100% { transform: translateY(0); opacity: inherit; }
  50%       { transform: translateY(2px); opacity: 0.3; }
}

.tele-arrow {
  fill: none;
  stroke: oklch(0.85 0.15 var(--hue-tool, var(--hue)));
  animation: arrowBounce 2s ease-in-out infinite;
}

@keyframes arrowBounce {
  0%, 100% { transform: translateY(0); }
  50%       { transform: translateY(-2px); }
}

.stand-neck, .stand-base {
  fill: oklch(0.7 0.18 var(--hue-tool, var(--hue)));
  opacity: 0.7;
}
.rec-dot {
  fill: oklch(0.65 0.28 20);
  animation: recBlink 1.5s ease-in-out infinite;
}
@keyframes recBlink {
  0%, 100% { opacity: 1; }
  50%       { opacity: 0.2; }
}

/* =============================================
   LINK ICON SVG STYLES
   ============================================= */
.url-bar {
  fill: oklch(0.7 0.18 var(--hue-tool, var(--hue)));
}
.long-bar { opacity: 0.8; animation: longPulse 3s ease-in-out infinite; }
.short-bar { animation: shortAppear 3s ease-in-out infinite; }

@keyframes longPulse {
  0%, 40%, 100% { opacity: 0.8; }
  50%, 90%      { opacity: 0.4; }
}
@keyframes shortAppear {
  0%, 40% { opacity: 0; transform: scaleX(0.7); }
  60%, 100% { opacity: 0.9; transform: scaleX(1); }
}

.url-chunk {
  fill: white;
  animation: chunkFlow 3s ease-in-out infinite;
}
.c1 { opacity: 0; animation-delay: 0s; }
.c2 { opacity: 0; animation-delay: 0.1s; }
.c3 { opacity: 0; animation-delay: 0.2s; }
.c4 { opacity: 0; animation-delay: 0.3s; }

@keyframes chunkFlow {
  0%, 10% { opacity: 0; }
  20%, 38% { opacity: 0.85; }
  45%, 100% { opacity: 0; }
}

.arrow-path {
  stroke: oklch(0.7 0.18 var(--hue-tool, var(--hue)));
  stroke-dasharray: 40;
  stroke-dashoffset: 40;
  animation: drawPath 3s ease-in-out infinite;
}

@keyframes drawPath {
  0%, 20% { stroke-dashoffset: 40; opacity: 0; }
  40%, 55% { stroke-dashoffset: 0; opacity: 0.7; }
  65%, 100% { stroke-dashoffset: -40; opacity: 0; }
}

.link-ring {
  stroke: white;
  fill: none;
  animation: linkAppear 3s ease-in-out infinite;
}
.link-bridge {
  stroke: white;
  animation: linkAppear 3s ease-in-out infinite;
}
.short-text-bar {
  fill: white;
  animation: linkAppear 3s ease-in-out infinite;
}

@keyframes linkAppear {
  0%, 55% { opacity: 0; }
