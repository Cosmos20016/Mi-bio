---
import MainGridLayout from "@layouts/MainGridLayout.astro";
import { url } from "@utils/url-utils";

const tools = [
	{
		name: "Teleprompter Studio",
		description:
			"Tu estudio profesional de lectura en pantalla. Velocidad precisa, espejo, focus mode, atajos de teclado y countdown.",
		href: url("/herramientas/teleprompter/"),
		iconType: "teleprompter",
		badge: "Pro",
		features: ["Modo espejo", "Focus mode", "Atajos de teclado", "Countdown"],
	},
	{
		name: "Acortador de URLs",
		description:
			"Acorta, organiza y gestiona tus enlaces. QR codes al instante, historial con estad√≠sticas y exportaci√≥n.",
		href: url("/herramientas/acortador/"),
		iconType: "link",
		badge: "Sin publicidad",
		features: ["QR Codes", "Categor√≠as", "Sin publicidad", "Exportar JSON"],
	},
];
---

<MainGridLayout title="Herramientas" description="Herramientas premium para creadores">
  <section class="tools-hub">
    <!-- Header -->
    <header class="tools-header">
      <div class="tools-header-icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 120 120" class="header-svg">
          <defs>
            <linearGradient id="headerGrad" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" style="stop-color:oklch(0.7 0.2 var(--hue));stop-opacity:1" />
              <stop offset="50%" style="stop-color:oklch(0.65 0.22 calc(var(--hue) + 30));stop-opacity:1" />
              <stop offset="100%" style="stop-color:oklch(0.6 0.2 calc(var(--hue) + 60));stop-opacity:1" />
            </linearGradient>
            <filter id="glow">
              <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
              <feMerge>
                <feMergeNode in="coloredBlur"/>
                <feMergeNode in="SourceGraphic"/>
              </feMerge>
            </filter>
          </defs>
          
          <!-- Hex√°gono exterior -->
          <polygon points="60,12 88,28 88,60 60,76 32,60 32,28" 
                   fill="none" stroke="url(#headerGrad)" stroke-width="2" 
                   opacity="0.4" class="hex-outer"/>
          
          <!-- Hex√°gono medio -->
          <polygon points="60,20 80,32 80,56 60,68 40,56 40,32" 
                   fill="url(#headerGrad)" opacity="0.15" class="hex-mid"/>
          
          <!-- Cristal central -->
          <circle cx="60" cy="44" r="18" fill="url(#headerGrad)" 
                  filter="url(#glow)" opacity="0.8" class="center-crystal"/>
          
          <!-- Estrella interna -->
          <path d="M 60 32 L 63 40 L 71 42 L 64 48 L 66 56 L 60 52 L 54 56 L 56 48 L 49 42 L 57 40 Z" 
                fill="white" opacity="0.9" class="inner-star"/>
          
          <!-- Puntos de energ√≠a -->
          <circle cx="40" cy="30" r="3" fill="url(#headerGrad)" class="energy-dot e1"/>
          <circle cx="80" cy="30" r="2.5" fill="url(#headerGrad)" class="energy-dot e2"/>
          <circle cx="35" cy="58" r="2" fill="url(#headerGrad)" class="energy-dot e3"/>
          <circle cx="85" cy="58" r="3" fill="url(#headerGrad)" class="energy-dot e4"/>
        </svg>
      </div>

      <h1 class="tools-title">Herramientas</h1>
      <p class="tools-subtitle">
        Suite exclusiva de herramientas profesionales para potenciar tu contenido y creatividad.
      </p>
      <div class="tools-stats">
        <span class="tools-stat">{tools.length} herramientas</span>
        <span class="tools-stat-divider">¬∑</span>
        <span class="tools-stat">100% gratuitas</span>
        <span class="tools-stat-divider">¬∑</span>
        <span class="tools-stat">Sin publicidad</span>
      </div>
    </header>

    <!-- Grid de herramientas -->
    <div class="tools-grid">
      {tools.map((tool, i) => (
        <a
          class="tool-card"
          href={tool.href}
          style={`animation-delay: calc(var(--content-delay) + ${i * 100}ms)`}
        >
          <div class="tool-badge">{tool.badge}</div>

          <div class="tool-icon-wrapper">
            {tool.iconType === "teleprompter" && (
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" class="tool-svg">
                <defs>
                  <linearGradient id="teleGrad" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:oklch(0.7 0.2 var(--hue));stop-opacity:1" />
                    <stop offset="100%" style="stop-color:oklch(0.55 0.22 calc(var(--hue) + 40));stop-opacity:1" />
                  </linearGradient>
                  <linearGradient id="textGrad" x1="0%" y1="0%" x2="100%" y2="0%">
                    <stop offset="0%" style="stop-color:oklch(0.8 0.15 var(--hue));stop-opacity:0" />
                    <stop offset="30%" style="stop-color:oklch(0.8 0.15 var(--hue));stop-opacity:1" />
                    <stop offset="70%" style="stop-color:oklch(0.8 0.15 var(--hue));stop-opacity:1" />
                    <stop offset="100%" style="stop-color:oklch(0.8 0.15 var(--hue));stop-opacity:0" />
                  </linearGradient>
                  <filter id="screenGlow">
                    <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
                    <feMerge>
                      <feMergeNode in="coloredBlur"/>
                      <feMergeNode in="SourceGraphic"/>
                    </feMerge>
                  </filter>
                </defs>
                
                <!-- MONITOR ESTILO BROADCAST CON PROFUNDIDAD -->
                <g class="monitor-group">
                  <!-- Sombra del monitor -->
                  <rect x="18" y="27" width="64" height="42" rx="3" 
                        fill="black" opacity="0.2" transform="translate(1, 1)"/>
                  
                  <!-- Cuerpo del monitor -->
                  <rect x="18" y="26" width="64" height="42" rx="3" 
                        fill="url(#teleGrad)" stroke="oklch(0.8 0.15 var(--hue))" 
                        stroke-width="1.5" filter="url(#screenGlow)"/>
                  
                  <!-- Pantalla oscura interior -->
                  <rect x="22" y="30" width="56" height="34" rx="2" 
                        fill="oklch(0.12 0.04 var(--hue))"/>
                  
                  <!-- TEXTO SCROLLEANDO - ESTE ES EL CONCEPTO CLAVE -->
                  <g class="scrolling-text">
                    <!-- L√≠neas de texto visibles que se mueven -->
                    <rect x="26" y="36" width="32" height="3" rx="1.5" 
                          fill="url(#textGrad)" class="text-line t1"/>
                    <rect x="26" y="42" width="42" height="3" rx="1.5" 
                          fill="url(#textGrad)" class="text-line t2"/>
                    <rect x="26" y="48" width="36" height="3" rx="1.5" 
                          fill="url(#textGrad)" class="text-line t3"/>
                    <rect x="26" y="54" width="28" height="3" rx="1.5" 
                          fill="url(#textGrad)" class="text-line t4"/>
                  </g>
                  
                  <!-- FLECHA DE SCROLL HACIA ARRIBA - IC√ìNICA -->
                  <g class="scroll-arrow">
                    <path d="M 50 40 L 54 36 L 58 40" 
                          stroke="oklch(0.75 0.18 var(--hue))" stroke-width="2.5" 
                          fill="none" stroke-linecap="round" stroke-linejoin="round" 
                          opacity="0.8"/>
                    <line x1="54" y1="36" x2="54" y2="48" 
                          stroke="oklch(0.75 0.18 var(--hue))" stroke-width="2" 
                          stroke-linecap="round" opacity="0.8"/>
                  </g>
                  
                  <!-- Indicador REC pulsante -->
                  <g class="rec-indicator">
                    <circle cx="72" cy="34" r="3" fill="oklch(0.6 0.25 20)" opacity="0.3"/>
                    <circle cx="72" cy="34" r="2" fill="oklch(0.7 0.3 20)" class="rec-dot"/>
                  </g>
                  
                  <!-- Reflejo de cristal -->
                  <rect x="24" y="31" width="24" height="18" rx="2" 
                        fill="white" opacity="0.12"/>
                </g>
                
                <!-- PLAY BUTTON PROMINENTE - Segunda idea clave -->
                <g class="play-button">
                  <circle cx="50" cy="52" r="10" fill="url(#teleGrad)" 
                          opacity="0.3" class="play-bg"/>
                  <path d="M 48 48 L 48 56 L 56 52 Z" 
                        fill="oklch(0.8 0.15 var(--hue))" class="play-triangle"/>
                </g>
                
                <!-- Base del soporte -->
                <path d="M 44 68 L 46 74 L 54 74 L 56 68 Z" 
                      fill="url(#teleGrad)" opacity="0.9"/>
                <rect x="38" y="74" width="24" height="3" rx="1.5" 
                      fill="url(#teleGrad)"/>
              </svg>
            )}
            
            {tool.iconType === "link" && (
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" class="tool-svg">
                <defs>
                  <linearGradient id="linkGrad" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:oklch(0.7 0.2 var(--hue));stop-opacity:1" />
                    <stop offset="100%" style="stop-color:oklch(0.55 0.22 calc(var(--hue) + 40));stop-opacity:1" />
                  </linearGradient>
                  <filter id="linkGlow">
                    <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
                    <feMerge>
                      <feMergeNode in="coloredBlur"/>
                      <feMergeNode in="SourceGraphic"/>
                    </feMerge>
                  </filter>
                </defs>
                
                <!-- URL LARGA EN LA PARTE SUPERIOR -->
                <g class="long-url">
                  <!-- Fondo de la URL larga -->
                  <rect x="15" y="22" width="70" height="10" rx="5" 
                        fill="oklch(0.2 0.05 var(--hue))" opacity="0.6"/>
                  
                  <!-- Texto simulado de URL larga -->
                  <line x1="20" y1="27" x2="75" y2="27" 
                        stroke="oklch(0.5 0.1 var(--hue))" stroke-width="2" 
                        stroke-linecap="round" opacity="0.4" class="url-text"/>
                  <circle cx="80" cy="27" r="1.5" fill="oklch(0.5 0.1 var(--hue))" opacity="0.4"/>
                  <circle cx="77" cy="27" r="1.5" fill="oklch(0.5 0.1 var(--hue))" opacity="0.4"/>
                  <circle cx="74" cy="27" r="1.5" fill="oklch(0.5 0.1 var(--hue))" opacity="0.4"/>
                </g>
                
                <!-- FLECHA M√ÅGICA DE TRANSFORMACI√ìN - CONCEPTO CLAVE -->
                <g class="magic-arrow" filter="url(#linkGlow)">
                  <path d="M 50 37 L 50 47" 
                        stroke="url(#linkGrad)" stroke-width="3" 
                        stroke-linecap="round" class="arrow-shaft"/>
                  <path d="M 50 47 L 45 42" 
                        stroke="url(#linkGrad)" stroke-width="3" 
                        stroke-linecap="round" class="arrow-tip-l"/>
                  <path d="M 50 47 L 55 42" 
                        stroke="url(#linkGrad)" stroke-width="3" 
                        stroke-linecap="round" class="arrow-tip-r"/>
                  
                  <!-- Part√≠culas m√°gicas alrededor de la flecha -->
                  <circle cx="43" cy="40" r="1.5" fill="url(#linkGrad)" class="magic-particle mp1" opacity="0.8"/>
                  <circle cx="57" cy="40" r="1.5" fill="url(#linkGrad)" class="magic-particle mp2" opacity="0.8"/>
                  <circle cx="48" cy="44" r="1" fill="url(#linkGrad)" class="magic-particle mp3" opacity="0.6"/>
                  <circle cx="52" cy="44" r="1" fill="url(#linkGrad)" class="magic-particle mp4" opacity="0.6"/>
                </g>
                
                <!-- URL CORTA EN LA PARTE INFERIOR - M√ÅS GRANDE Y PROMINENTE -->
                <g class="short-url">
                  <!-- Fondo brillante de la URL corta -->
                  <rect x="32" y="54" width="36" height="12" rx="6" 
                        fill="url(#linkGrad)" filter="url(#linkGlow)" 
                        class="short-url-bg" opacity="0.9"/>
                  
                  <!-- Texto de URL corta m√°s visible -->
                  <text x="50" y="62" 
                        font-family="monospace" font-size="8" font-weight="bold" 
                        fill="white" text-anchor="middle" 
                        class="short-url-text">bit.ly</text>
                </g>
                
                <!-- QR CODE MODERNO - M√ÅS GRANDE Y VISIBLE -->
                <g class="qr-code" transform="translate(62, 68)">
                  <!-- Marco del QR -->
                  <rect x="0" y="0" width="24" height="24" rx="3" 
                        fill="white" stroke="url(#linkGrad)" stroke-width="2" 
                        filter="url(#linkGlow)"/>
                  
                  <!-- Patr√≥n QR simplificado pero reconocible -->
                  <rect x="3" y="3" width="6" height="6" rx="1" fill="url(#linkGrad)" class="qr-corner"/>
                  <rect x="15" y="3" width="6" height="6" rx="1" fill="url(#linkGrad)" class="qr-corner"/>
                  <rect x="3" y="15" width="6" height="6" rx="1" fill="url(#linkGrad)" class="qr-corner"/>
                  
                  <!-- Centro del QR -->
                  <rect x="11" y="11" width="6" height="6" rx="1" fill="url(#linkGrad)" class="qr-center"/>
                  
                  <!-- M√≥dulos decorativos -->
                  <rect x="11" y="3" width="2" height="2" fill="url(#linkGrad)" opacity="0.7"/>
                  <rect x="3" y="11" width="2" height="2" fill="url(#linkGrad)" opacity="0.7"/>
                  <rect x="19" y="11" width="2" height="2" fill="url(#linkGrad)" opacity="0.7"/>
                  <rect x="11" y="19" width="2" height="2" fill="url(#linkGrad)" opacity="0.7"/>
                </g>
                
                <!-- Icono de enlace peque√±o decorativo -->
                <g class="link-icon" opacity="0.5">
                  <circle cx="20" cy="62" r="3" stroke="url(#linkGrad)" 
                          stroke-width="1.5" fill="none"/>
                  <circle cx="28" cy="62" r="3" stroke="url(#linkGrad)" 
                          stroke-width="1.5" fill="none"/>
                  <line x1="22" y1="62" x2="26" y2="62" 
                        stroke="url(#linkGrad)" stroke-width="1.5"/>
                </g>
              </svg>
            )}
          </div>

          <div class="tool-content">
            <h2 class="tool-name">{tool.name}</h2>
            <p class="tool-description">{tool.description}</p>
          </div>

          <div class="tool-features">
            {tool.features.map((feature) => (
              <span class="tool-feature-tag">{feature}</span>
            ))}
          </div>

          <div class="tool-cta">
            <span>Abrir herramienta</span>
            <span class="tool-cta-arrow">‚Üí</span>
          </div>
        </a>
      ))}
    </div>

    <div class="tools-footer">
      <p>
        üîí Todas las herramientas funcionan en tu navegador. Tus datos nunca salen de tu dispositivo.
      </p>
    </div>
  </section>
</MainGridLayout>

<style>
  .tools-hub {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .tools-header {
    text-align: center;
    padding: 1rem 0 0.5rem;
  }

  /* üé® HEADER ICON */
  .tools-header-icon {
    margin-bottom: 0.75rem;
    display: inline-block;
    animation: headerFloat 4s ease-in-out infinite;
  }

  .header-svg {
    width: 90px;
    height: 90px;
    filter: drop-shadow(0 8px 24px oklch(0.7 0.18 var(--hue) / 0.4));
  }

  @keyframes headerFloat {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-10px) rotate(3deg); }
  }

  .hex-outer {
    animation: hexRotate 20s linear infinite;
    transform-origin: 60px 44px;
  }

  @keyframes hexRotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .hex-mid {
    animation: hexPulse 3s ease-in-out infinite;
    transform-origin: 60px 44px;
  }

  @keyframes hexPulse {
    0%, 100% { transform: scale(1); opacity: 0.15; }
    50% { transform: scale(1.05); opacity: 0.25; }
  }

  .center-crystal {
    animation: crystalPulse 2s ease-in-out infinite;
  }

  @keyframes crystalPulse {
    0%, 100% { transform: scale(1); opacity: 0.8; }
    50% { transform: scale(1.1); opacity: 1; }
  }

  .inner-star {
    animation: starRotate 8s linear infinite;
    transform-origin: 60px 44px;
  }

  @keyframes starRotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .energy-dot {
    animation: energyPulse 2s ease-in-out infinite;
  }

  .e1 { animation-delay: 0s; }
  .e2 { animation-delay: 0.5s; }
  .e3 { animation-delay: 1s; }
  .e4 { animation-delay: 1.5s; }

  @keyframes energyPulse {
    0%, 100% { opacity: 0.6; transform: scale(1); }
    50% { opacity: 1; transform: scale(1.3); }
  }

  /* üé® T√çTULO */
  .tools-title {
    font-size: 2.5rem;
    font-weight: 800;
    letter-spacing: -0.02em;
    background: linear-gradient(
      135deg,
      oklch(0.7 0.2 var(--hue)),
      oklch(0.65 0.22 calc(var(--hue) + 30)),
      oklch(0.6 0.2 calc(var(--hue) + 60)),
      oklch(0.65 0.22 calc(var(--hue) + 30)),
      oklch(0.7 0.2 var(--hue))
    );
    background-size: 300% 100%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
    line-height: 1.2;
    animation: titleShimmer 5s ease-in-out infinite, titleEntrance 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  @keyframes titleShimmer {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  @keyframes titleEntrance {
    from { opacity: 0; transform: translateY(-20px) scale(0.9); }
    to { opacity: 1; transform: translateY(0) scale(1); }
  }

  :global(.dark) .tools-title {
    background: linear-gradient(
      135deg,
      oklch(0.8 0.18 var(--hue)),
      oklch(0.75 0.2 calc(var(--hue) + 30)),
      oklch(0.7 0.18 calc(var(--hue) + 60)),
      oklch(0.75 0.2 calc(var(--hue) + 30)),
      oklch(0.8 0.18 var(--hue))
    );
    background-size: 300% 100%;
    -webkit-background-clip: text;
    background-clip: text;
  }

  .tools-subtitle {
    color: #475569;
    font-size: 1.05rem;
    line-height: 1.5;
    max-width: 32rem;
    margin: 0 auto 0.75rem;
    animation: subtitleFade 0.8s ease-out 0.2s both;
  }

  @keyframes subtitleFade {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  :global(.dark) .tools-subtitle {
    color: #94a3b8;
  }

  .tools-stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    font-weight: 600;
    animation: statsFade 0.8s ease-out 0.4s both;
  }

  @keyframes statsFade {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .tools-stat {
    color: oklch(0.55 0.14 var(--hue));
  }

  :global(.dark) .tools-stat {
    color: oklch(0.72 0.14 var(--hue));
  }

  .tools-stat-divider {
    color: #cbd5e1;
  }

  :global(.dark) .tools-stat-divider {
    color: #475569;
  }

  /* GRID */
  .tools-grid {
    display: grid;
    gap: 1.25rem;
    grid-template-columns: 1fr;
  }

  @media (min-width: 768px) {
    .tools-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* üé® CARDS */
  .tool-card {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1.75rem;
    background: var(--card-bg);
    border-radius: var(--radius-large);
    border: 1px solid rgba(0, 0, 0, 0.06);
    text-decoration: none;
    color: inherit;
    transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
    overflow: hidden;
    animation: cardEntrance 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) both;
  }

  @keyframes cardEntrance {
    from { opacity: 0; transform: translateY(30px) scale(0.95); }
    to { opacity: 1; transform: translateY(0) scale(1); }
  }

  :global(.dark) .tool-card {
    border-color: rgba(255, 255, 255, 0.08);
  }

  .tool-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(
      90deg,
      transparent,
      oklch(0.7 0.2 var(--hue)),
      oklch(0.65 0.22 calc(var(--hue) + 40)),
      oklch(0.7 0.2 var(--hue)),
      transparent
    );
    background-size: 200% 100%;
    opacity: 0;
    transition: opacity 0.5s ease;
    animation: borderFlow 3s linear infinite;
  }

  @keyframes borderFlow {
    from { background-position: -200% 0; }
    to { background-position: 200% 0; }
  }

  .tool-card::after {
    content: "";
    position: absolute;
    top: -100%;
    left: -100%;
    width: 300%;
    height: 300%;
    background: radial-gradient(
      circle at center,
      oklch(0.7 0.2 var(--hue) / 0.1) 0%,
      transparent 60%
    );
    opacity: 0;
    transition: opacity 0.6s ease, transform 0.6s ease;
    pointer-events: none;
    transform: scale(0.5);
  }

  .tool-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 
      0 25px 50px oklch(0.7 0.2 var(--hue) / 0.25),
      0 10px 20px rgba(0, 0, 0, 0.1);
    border-color: oklch(0.75 0.14 var(--hue));
  }

  :global(.dark) .tool-card:hover {
    box-shadow: 
      0 25px 50px oklch(0.5 0.16 var(--hue) / 0.35),
      0 10px 20px rgba(0, 0, 0, 0.5);
    border-color: oklch(0.5 0.14 var(--hue));
  }

  .tool-card:hover::before {
    opacity: 1;
  }

  .tool-card:hover::after {
    opacity: 1;
    transform: scale(1);
  }

  /* BADGE */
  .tool-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.3rem 0.7rem;
    border-radius: 9999px;
    background: linear-gradient(135deg, oklch(0.95 0.08 var(--hue)), oklch(0.9 0.1 calc(var(--hue) + 20)));
    color: oklch(0.5 0.18 var(--hue));
    animation: badgeGlow 2.5s ease-in-out infinite;
    z-index: 1;
    box-shadow: 0 2px 8px oklch(0.7 0.16 var(--hue) / 0.3);
  }

  @keyframes badgeGlow {
    0%, 100% {
      box-shadow: 0 2px 8px oklch(0.7 0.16 var(--hue) / 0.3), 0 0 0 0 oklch(0.7 0.16 var(--hue) / 0.5);
