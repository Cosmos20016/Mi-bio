---
import MainGridLayout from "@layouts/MainGridLayout.astro";
import { url } from "@utils/url-utils";

const tools = [
	{
		name: "Teleprompter Studio",
		description:
			"Tu estudio profesional de lectura en pantalla. Velocidad precisa, espejo, focus mode, atajos de teclado y countdown.",
		href: url("/herramientas/teleprompter/"),
		iconType: "teleprompter",
		badge: "Pro",
		features: ["Modo espejo", "Focus mode", "Atajos de teclado", "Countdown"],
	},
	{
		name: "Acortador de URLs",
		description:
			"Acorta, organiza y gestiona tus enlaces. QR codes al instante, historial con estad√≠sticas y exportaci√≥n.",
		href: url("/herramientas/acortador/"),
		iconType: "link",
		badge: "Sin publicidad",
		features: ["QR Codes", "Categor√≠as", "Sin publicidad", "Exportar JSON"],
	},
];
---

<MainGridLayout title="Herramientas" description="Herramientas premium para creadores">
  <section class="tools-hub">
    <!-- Header con icono premium -->
    <header class="tools-header">
      <div class="tools-header-icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 120 120" class="header-svg">
          <defs>
            <linearGradient id="headerGrad1" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" style="stop-color:oklch(0.7 0.18 var(--hue));stop-opacity:1" />
              <stop offset="50%" style="stop-color:oklch(0.65 0.2 calc(var(--hue) + 30));stop-opacity:1" />
              <stop offset="100%" style="stop-color:oklch(0.6 0.18 calc(var(--hue) + 60));stop-opacity:1" />
            </linearGradient>
            <linearGradient id="headerGrad2" x1="100%" y1="0%" x2="0%" y2="100%">
              <stop offset="0%" style="stop-color:oklch(0.75 0.16 calc(var(--hue) + 20));stop-opacity:1" />
              <stop offset="100%" style="stop-color:oklch(0.65 0.18 var(--hue));stop-opacity:1" />
            </linearGradient>
            <filter id="glow">
              <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
              <feMerge>
                <feMergeNode in="coloredBlur"/>
                <feMergeNode in="SourceGraphic"/>
              </feMerge>
            </filter>
          </defs>
          
          <!-- Hex√°gono de fondo con efecto de profundidad -->
          <polygon points="60,15 85,30 85,60 60,75 35,60 35,30" 
                   fill="url(#headerGrad1)" opacity="0.15" class="hex-bg"/>
          
          <!-- Forma geom√©trica central estilizada -->
          <g class="center-shape">
            <!-- Tri√°ngulo superior -->
            <path d="M 60 25 L 70 40 L 50 40 Z" fill="url(#headerGrad1)" filter="url(#glow)"/>
            <!-- Rombo central -->
            <path d="M 60 42 L 72 52 L 60 62 L 48 52 Z" fill="url(#headerGrad2)" filter="url(#glow)"/>
            <!-- L√≠neas de conexi√≥n -->
            <line x1="60" y1="40" x2="60" y2="42" stroke="url(#headerGrad1)" stroke-width="2" class="connect-line"/>
            <line x1="60" y1="62" x2="60" y2="70" stroke="url(#headerGrad2)" stroke-width="2" class="connect-line"/>
          </g>
          
          <!-- √ìrbitas decorativas -->
          <g class="orbits">
            <circle cx="60" cy="45" r="25" fill="none" stroke="url(#headerGrad1)" 
                    stroke-width="1" opacity="0.3" class="orbit orbit-1"/>
            <circle cx="60" cy="45" r="32" fill="none" stroke="url(#headerGrad2)" 
                    stroke-width="0.5" opacity="0.2" class="orbit orbit-2"/>
          </g>
          
          <!-- Part√≠culas flotantes -->
          <circle cx="35" cy="35" r="2.5" fill="url(#headerGrad1)" class="particle p-1" opacity="0.8"/>
          <circle cx="85" cy="40" r="2" fill="url(#headerGrad2)" class="particle p-2" opacity="0.7"/>
          <circle cx="40" cy="65" r="1.5" fill="url(#headerGrad1)" class="particle p-3" opacity="0.6"/>
          <circle cx="80" cy="70" r="2" fill="url(#headerGrad2)" class="particle p-4" opacity="0.7"/>
        </svg>
      </div>

      <h1 class="tools-title">Herramientas</h1>
      <p class="tools-subtitle">
        Suite exclusiva de herramientas profesionales para potenciar tu contenido y creatividad.
      </p>
      <div class="tools-stats">
        <span class="tools-stat">{tools.length} herramientas</span>
        <span class="tools-stat-divider">¬∑</span>
        <span class="tools-stat">100% gratuitas</span>
        <span class="tools-stat-divider">¬∑</span>
        <span class="tools-stat">Sin publicidad</span>
      </div>
    </header>

    <!-- Grid de herramientas -->
    <div class="tools-grid">
      {tools.map((tool, i) => (
        <a
          class="tool-card"
          href={tool.href}
          style={`animation-delay: calc(var(--content-delay) + ${i * 100}ms)`}
        >
          <!-- Badge -->
          <div class="tool-badge">{tool.badge}</div>

          <!-- Icono SVG Ultra Premium -->
          <div class="tool-icon-wrapper">
            {tool.iconType === "teleprompter" && (
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 80 80" class="tool-svg">
                <defs>
                  <linearGradient id="teleGrad1" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:oklch(0.65 0.18 var(--hue));stop-opacity:1" />
                    <stop offset="100%" style="stop-color:oklch(0.55 0.2 calc(var(--hue) + 40));stop-opacity:1" />
                  </linearGradient>
                  <linearGradient id="teleGrad2" x1="100%" y1="0%" x2="0%" y2="100%">
                    <stop offset="0%" style="stop-color:oklch(0.7 0.16 calc(var(--hue) + 20));stop-opacity:1" />
                    <stop offset="100%" style="stop-color:oklch(0.6 0.18 var(--hue));stop-opacity:1" />
                  </linearGradient>
                  <filter id="teleGlow">
                    <feGaussianBlur stdDeviation="1.5" result="coloredBlur"/>
                    <feMerge>
                      <feMergeNode in="coloredBlur"/>
                      <feMergeNode in="SourceGraphic"/>
                    </feMerge>
                  </filter>
                  <clipPath id="screenClip">
                    <rect x="15" y="18" width="50" height="34" rx="3"/>
                  </clipPath>
                </defs>
                
                <!-- Marco del monitor con dise√±o moderno -->
                <rect x="12" y="15" width="56" height="40" rx="4" 
                      fill="url(#teleGrad1)" filter="url(#teleGlow)" class="tele-frame"/>
                
                <!-- Pantalla interior oscura -->
                <rect x="15" y="18" width="50" height="34" rx="3" 
                      fill="oklch(0.15 0.03 var(--hue))" opacity="0.9"/>
                
                <!-- Contenido de la pantalla -->
                <g clip-path="url(#screenClip)">
                  <!-- Barras de texto animadas con dise√±o moderno -->
                  <g class="text-bars">
                    <rect x="20" y="24" width="30" height="2.5" rx="1.25" 
                          fill="url(#teleGrad2)" opacity="0.8" class="bar bar-1"/>
                    <rect x="20" y="30" width="40" height="2.5" rx="1.25" 
                          fill="url(#teleGrad2)" opacity="0.6" class="bar bar-2"/>
                    <rect x="20" y="36" width="35" height="2.5" rx="1.25" 
                          fill="url(#teleGrad2)" opacity="0.7" class="bar bar-3"/>
                    <rect x="20" y="42" width="28" height="2.5" rx="1.25" 
                          fill="url(#teleGrad2)" opacity="0.5" class="bar bar-4"/>
                  </g>
                  
                  <!-- Indicador de reproducci√≥n moderno -->
                  <g class="play-indicator">
                    <circle cx="58" cy="25" r="4" fill="url(#teleGrad2)" opacity="0.3"/>
                    <circle cx="58" cy="25" r="2.5" fill="oklch(0.75 0.18 var(--hue))" class="pulse-dot"/>
                  </g>
                </g>
                
                <!-- Reflejos de cristal en el monitor -->
                <rect x="16" y="19" width="20" height="15" rx="2" 
                      fill="white" opacity="0.08" class="glass-shine"/>
                
                <!-- Base moderna del soporte -->
                <path d="M 35 56 L 38 62 L 42 62 L 45 56 Z" 
                      fill="url(#teleGrad1)" opacity="0.9"/>
                <rect x="30" y="62" width="20" height="4" rx="2" 
                      fill="url(#teleGrad1)"/>
                
                <!-- Detalles decorativos -->
                <circle cx="40" cy="58" r="1.5" fill="url(#teleGrad2)" opacity="0.6" class="detail-dot"/>
              </svg>
            )}
            
            {tool.iconType === "link" && (
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 80 80" class="tool-svg">
                <defs>
                  <linearGradient id="linkGrad1" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:oklch(0.65 0.18 var(--hue));stop-opacity:1" />
                    <stop offset="100%" style="stop-color:oklch(0.55 0.2 calc(var(--hue) + 40));stop-opacity:1" />
                  </linearGradient>
                  <linearGradient id="linkGrad2" x1="100%" y1="0%" x2="0%" y2="100%">
                    <stop offset="0%" style="stop-color:oklch(0.7 0.16 calc(var(--hue) + 20));stop-opacity:1" />
                    <stop offset="100%" style="stop-color:oklch(0.6 0.18 var(--hue));stop-opacity:1" />
                  </linearGradient>
                  <filter id="linkGlow">
                    <feGaussianBlur stdDeviation="1.5" result="coloredBlur"/>
                    <feMerge>
                      <feMergeNode in="coloredBlur"/>
                      <feMergeNode in="SourceGraphic"/>
                    </feMerge>
                  </filter>
                </defs>
                
                <!-- Eslab√≥n izquierdo con dise√±o 3D moderno -->
                <g class="link-left" filter="url(#linkGlow)">
                  <!-- Parte superior del eslab√≥n -->
                  <path d="M 18 28 Q 10 28 10 38 Q 10 48 18 48 L 30 48 Q 35 48 35 43" 
                        stroke="url(#linkGrad1)" stroke-width="7" fill="none" 
                        stroke-linecap="round" opacity="0.9"/>
                  <!-- Reflejo interior -->
                  <path d="M 18 30 Q 13 30 13 38 Q 13 46 18 46 L 28 46" 
                        stroke="oklch(0.9 0.1 var(--hue))" stroke-width="2" fill="none" 
                        stroke-linecap="round" opacity="0.3" class="inner-shine"/>
                </g>
                
                <!-- Eslab√≥n derecho con dise√±o 3D moderno -->
                <g class="link-right" filter="url(#linkGlow)">
                  <!-- Parte superior del eslab√≥n -->
                  <path d="M 62 28 Q 70 28 70 38 Q 70 48 62 48 L 50 48 Q 45 48 45 43" 
                        stroke="url(#linkGrad2)" stroke-width="7" fill="none" 
                        stroke-linecap="round" opacity="0.9"/>
                  <!-- Reflejo interior -->
                  <path d="M 62 30 Q 67 30 67 38 Q 67 46 62 46 L 52 46" 
                        stroke="oklch(0.9 0.1 var(--hue))" stroke-width="2" fill="none" 
                        stroke-linecap="round" opacity="0.3" class="inner-shine"/>
                </g>
                
                <!-- Conexi√≥n central brillante -->
                <g class="center-connection">
                  <line x1="35" y1="38" x2="45" y2="38" 
                        stroke="url(#linkGrad1)" stroke-width="3" 
                        stroke-linecap="round" opacity="0.6" class="connect-beam"/>
                  <circle cx="40" cy="38" r="3" fill="url(#linkGrad2)" 
                          class="center-node" opacity="0.8"/>
                </g>
                
                <!-- QR Code moderno y estilizado -->
                <g class="qr-pattern" transform="translate(52, 54)">
                  <!-- Marco del QR -->
                  <rect x="0" y="0" width="20" height="20" rx="2" 
                        fill="none" stroke="url(#linkGrad1)" stroke-width="1" opacity="0.4"/>
                  
                  <!-- Patr√≥n de m√≥dulos QR modernos -->
                  <g class="qr-modules">
                    <rect x="2" y="2" width="3" height="3" rx="0.5" fill="url(#linkGrad1)" class="qr-dot d-1"/>
                    <rect x="7" y="2" width="3" height="3" rx="0.5" fill="url(#linkGrad2)" class="qr-dot d-2"/>
                    <rect x="12" y="2" width="3" height="3" rx="0.5" fill="url(#linkGrad1)" class="qr-dot d-3"/>
                    <rect x="2" y="7" width="3" height="3" rx="0.5" fill="url(#linkGrad2)" class="qr-dot d-4"/>
                    <rect x="7" y="7" width="6" height="6" rx="1" fill="url(#linkGrad1)" class="qr-center"/>
                    <rect x="15" y="7" width="3" height="3" rx="0.5" fill="url(#linkGrad2)" class="qr-dot d-5"/>
                    <rect x="2" y="15" width="3" height="3" rx="0.5" fill="url(#linkGrad1)" class="qr-dot d-6"/>
                    <rect x="7" y="15" width="3" height="3" rx="0.5" fill="url(#linkGrad2)" class="qr-dot d-7"/>
                    <rect x="15" y="15" width="3" height="3" rx="0.5" fill="url(#linkGrad1)" class="qr-dot d-8"/>
                  </g>
                </g>
                
                <!-- Part√≠culas de conexi√≥n -->
                <circle cx="25" cy="25" r="1.5" fill="url(#linkGrad1)" class="connection-particle cp-1" opacity="0.6"/>
                <circle cx="55" cy="25" r="1.5" fill="url(#linkGrad2)" class="connection-particle cp-2" opacity="0.6"/>
              </svg>
            )}
          </div>

          <!-- Contenido -->
          <div class="tool-content">
            <h2 class="tool-name">{tool.name}</h2>
            <p class="tool-description">{tool.description}</p>
          </div>

          <!-- Features -->
          <div class="tool-features">
            {tool.features.map((feature) => (
              <span class="tool-feature-tag">{feature}</span>
            ))}
          </div>

          <!-- CTA visual -->
          <div class="tool-cta">
            <span>Abrir herramienta</span>
            <span class="tool-cta-arrow">‚Üí</span>
          </div>
        </a>
      ))}
    </div>

    <!-- Footer informativo -->
    <div class="tools-footer">
      <p>
        üîí Todas las herramientas funcionan en tu navegador. Tus datos nunca salen de tu dispositivo.
      </p>
    </div>
  </section>
</MainGridLayout>

<style>
  .tools-hub {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .tools-header {
    text-align: center;
    padding: 1rem 0 0.5rem;
  }

  /* üé® ICONO HEADER ULTRA PREMIUM */
  .tools-header-icon {
    margin-bottom: 0.75rem;
    display: inline-block;
    animation: headerFloat 4s ease-in-out infinite;
  }

  .header-svg {
    width: 90px;
    height: 90px;
    filter: drop-shadow(0 8px 24px oklch(0.7 0.14 var(--hue) / 0.4));
  }

  @keyframes headerFloat {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    33% { transform: translateY(-12px) rotate(2deg); }
    66% { transform: translateY(-6px) rotate(-2deg); }
  }

  /* Animaciones del icono header */
  .hex-bg {
    animation: hexPulse 3s ease-in-out infinite;
  }

  @keyframes hexPulse {
    0%, 100% { transform: scale(1); opacity: 0.15; }
    50% { transform: scale(1.05); opacity: 0.25; }
  }

  .center-shape {
    animation: shapeRotate 6s linear infinite;
    transform-origin: 60px 45px;
  }

  @keyframes shapeRotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .connect-line {
    animation: lineGrow 2s ease-in-out infinite;
  }

  @keyframes lineGrow {
    0%, 100% { stroke-dasharray: 2 2; }
    50% { stroke-dasharray: 4 4; }
  }

  .orbit {
    animation: orbitRotate 8s linear infinite;
    transform-origin: 60px 45px;
  }

  .orbit-1 { animation-duration: 8s; }
  .orbit-2 { animation-duration: 12s; animation-direction: reverse; }

  @keyframes orbitRotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .particle {
    animation: particleFloat 3s ease-in-out infinite;
  }

  .p-1 { animation-delay: 0s; }
  .p-2 { animation-delay: 0.5s; }
  .p-3 { animation-delay: 1s; }
  .p-4 { animation-delay: 1.5s; }

  @keyframes particleFloat {
    0%, 100% { transform: translate(0, 0); opacity: 0.8; }
    50% { transform: translate(3px, -5px); opacity: 0.4; }
  }

  /* üé® T√çTULO PREMIUM */
  .tools-title {
    font-size: 2.5rem;
    font-weight: 800;
    letter-spacing: -0.02em;
    background: linear-gradient(
      135deg,
      oklch(0.7 0.18 var(--hue)),
      oklch(0.65 0.2 calc(var(--hue) + 30)),
      oklch(0.6 0.18 calc(var(--hue) + 60)),
      oklch(0.65 0.2 calc(var(--hue) + 30)),
      oklch(0.7 0.18 var(--hue))
    );
    background-size: 300% 100%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
    line-height: 1.2;
    animation: premiumShimmer 5s ease-in-out infinite, titleEntrance 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  @keyframes premiumShimmer {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  @keyframes titleEntrance {
    from {
      opacity: 0;
      transform: translateY(-20px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  :global(.dark) .tools-title {
    background: linear-gradient(
      135deg,
      oklch(0.8 0.16 var(--hue)),
      oklch(0.75 0.18 calc(var(--hue) + 30)),
      oklch(0.7 0.16 calc(var(--hue) + 60)),
      oklch(0.75 0.18 calc(var(--hue) + 30)),
      oklch(0.8 0.16 var(--hue))
    );
    background-size: 300% 100%;
    -webkit-background-clip: text;
    background-clip: text;
  }

  .tools-subtitle {
    color: #475569;
    font-size: 1.05rem;
    line-height: 1.5;
    max-width: 32rem;
    margin: 0 auto 0.75rem;
    animation: subtitleFade 0.8s ease-out 0.2s both;
  }

  @keyframes subtitleFade {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  :global(.dark) .tools-subtitle {
    color: #94a3b8;
  }

  .tools-stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    font-weight: 600;
    animation: statsFade 0.8s ease-out 0.4s both;
  }

  @keyframes statsFade {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .tools-stat {
    color: oklch(0.55 0.12 var(--hue));
  }

  :global(.dark) .tools-stat {
    color: oklch(0.72 0.12 var(--hue));
  }

  .tools-stat-divider {
    color: #cbd5e1;
  }

  :global(.dark) .tools-stat-divider {
    color: #475569;
  }

  /* GRID */
  .tools-grid {
    display: grid;
    gap: 1.25rem;
    grid-template-columns: 1fr;
  }

  @media (min-width: 768px) {
    .tools-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* üé® CARDS ULTRA PREMIUM */
  .tool-card {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1.75rem;
    background: var(--card-bg);
    border-radius: var(--radius-large);
    border: 1px solid rgba(0, 0, 0, 0.06);
    text-decoration: none;
    color: inherit;
    transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
    overflow: hidden;
    animation: cardEntrance 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) both;
  }

  @keyframes cardEntrance {
    from {
      opacity: 0;
      transform: translateY(30px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  :global(.dark) .tool-card {
    border-color: rgba(255, 255, 255, 0.08);
  }

  /* Borde superior brillante */
  .tool-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(
      90deg,
      transparent,
      oklch(0.7 0.18 var(--hue)),
      oklch(0.65 0.2 calc(var(--hue) + 40)),
      oklch(0.7 0.18 var(--hue)),
      transparent
    );
    background-size: 200% 100%;
    opacity: 0;
    transition: opacity 0.5s ease;
    animation: borderFlow 3s linear infinite;
  }

  @keyframes borderFlow {
    from { background-position: -200% 0; }
    to { background-position: 200% 0; }
  }

  /* Resplandor de fondo */
  .tool-card::after {
    content: "";
    position: absolute;
    top: -100%;
    left: -100%;
    width: 300%;
    height: 300%;
    background: radial-gradient(
      circle at center,
      oklch(0.7 0.18 var(--hue) / 0.08) 0%,
      transparent 60%
    );
    opacity: 0;
    transition: opacity 0.6s ease, transform 0.6s ease;
    pointer-events: none;
    transform: scale(0.5);
  }

  .tool-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 
      0 25px 50px oklch(0.7 0.18 var(--hue) / 0.2),
      0 10px 20px rgba(0, 0, 0, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    border-color: oklch(0.75 0.12 var(--hue));
  }

  :global(.dark) .tool-card:hover {
    box-shadow: 
      0 25px 50px oklch(0.5 0.14 var(--hue) / 0.3),
      0 10px 20px rgba(0, 0, 0, 0.5),
      inset 0 1px 0 rgba(255, 255, 255, 0.05);
    border-color: oklch(0.5 0.12 var(--hue));
  }

  .tool-card:hover::before {
    opacity: 1;
  }

  .tool-card:hover::after {
    opacity: 1;
    transform: scale(1);
  }

  /* BADGE PREMIUM */
  .tool-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.3rem 0.7rem;
    border-radius: 9999px;
    background: linear-gradient(135deg, oklch(0.95 0.06 var(--hue)), oklch(0.9 0.08 calc(var(--hue) + 20)));
    color: oklch(0.5 0.16 var(--hue));
    animation: badgeGlow 2.5s ease-in-out infinite;
    z-index: 1;
    box-shadow: 0 2px 8px oklch(0.7 0.14 var(--hue) / 0.3);
  }

  @keyframes badgeGlow {
    0%, 100% {
      box-shadow: 0 2px 8px oklch(0.7 0.14 var(--hue) / 0.3), 0 0 0 0 oklch(0.7 0.14 var(--hue) / 0.5);
