---
import MainGridLayout from "@layouts/MainGridLayout.astro";
import { url } from "@utils/url-utils";

const tools = [
	{
		name: "Teleprompter Studio",
		description:
			"Tu estudio profesional de lectura en pantalla. Velocidad precisa, espejo, focus mode, atajos de teclado y countdown.",
		href: url("/herramientas/teleprompter/"),
		iconType: "teleprompter",
		badge: "Pro",
		features: ["Modo espejo", "Focus mode", "Atajos de teclado", "Countdown"],
	},
	{
		name: "Acortador de URLs",
		description:
			"Acorta, organiza y gestiona tus enlaces. QR codes al instante, historial con estadÃ­sticas y exportaciÃ³n.",
		href: url("/herramientas/acortador/"),
		iconType: "link",
		badge: "Sin publicidad",
		features: ["QR Codes", "CategorÃ­as", "Sin publicidad", "Exportar JSON"],
	},
];
---

<MainGridLayout title="Herramientas" description="Herramientas premium para creadores">
  <section class="tools-hub">
    <header class="tools-header">
      <div class="tools-header-icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" class="header-svg">
          <defs>
            <linearGradient id="headerGrad" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" style="stop-color:oklch(0.7 0.2 var(--hue));stop-opacity:1" />
              <stop offset="100%" style="stop-color:oklch(0.6 0.22 calc(var(--hue) + 40));stop-opacity:1" />
            </linearGradient>
            <filter id="headerGlow">
              <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
              <feMerge>
                <feMergeNode in="coloredBlur"/>
                <feMergeNode in="SourceGraphic"/>
              </feMerge>
            </filter>
          </defs>
          
          <polygon points="50,15 75,28 75,54 50,67 25,54 25,28" 
                   fill="none" stroke="url(#headerGrad)" stroke-width="2" 
                   opacity="0.5" class="hex-outline"/>
          
          <circle cx="50" cy="41" r="12" fill="url(#headerGrad)" 
                  filter="url(#headerGlow)" opacity="0.7" class="center-glow"/>
          
          <path d="M 50 33 L 52 38 L 57 39 L 53 43 L 54 48 L 50 45 L 46 48 L 47 43 L 43 39 L 48 38 Z" 
                fill="white" opacity="0.9" class="star"/>
          
          <circle cx="35" cy="30" r="2" fill="url(#headerGrad)" class="dot d1" opacity="0.6"/>
          <circle cx="65" cy="30" r="2" fill="url(#headerGrad)" class="dot d2" opacity="0.6"/>
          <circle cx="35" cy="52" r="2" fill="url(#headerGrad)" class="dot d3" opacity="0.6"/>
          <circle cx="65" cy="52" r="2" fill="url(#headerGrad)" class="dot d4" opacity="0.6"/>
        </svg>
      </div>

      <h1 class="tools-title">Herramientas</h1>
      <p class="tools-subtitle">
        Suite exclusiva de herramientas profesionales para potenciar tu contenido y creatividad.
      </p>
      <div class="tools-stats">
        <span class="tools-stat">{tools.length} herramientas</span>
        <span class="tools-stat-divider">Â·</span>
        <span class="tools-stat">100% gratuitas</span>
        <span class="tools-stat-divider">Â·</span>
        <span class="tools-stat">Sin publicidad</span>
      </div>
    </header>

    <div class="tools-grid">
      {tools.map((tool, i) => (
        <a
          class="tool-card"
          href={tool.href}
          style={`animation-delay: calc(var(--content-delay) + ${i * 100}ms)`}
        >
          <div class="tool-badge">{tool.badge}</div>

          <div class="tool-icon-wrapper">
            {tool.iconType === "teleprompter" && (
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 80 80" class="tool-svg teleprompter-icon">
                <defs>
                  <linearGradient id="teleGrad" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:oklch(0.7 0.2 var(--hue));stop-opacity:1" />
                    <stop offset="100%" style="stop-color:oklch(0.55 0.22 calc(var(--hue) + 40));stop-opacity:1" />
                  </linearGradient>
                  <filter id="teleGlow">
                    <feGaussianBlur stdDeviation="1.5" result="coloredBlur"/>
                    <feMerge>
                      <feMergeNode in="coloredBlur"/>
                      <feMergeNode in="SourceGraphic"/>
                    </feMerge>
                  </filter>
                </defs>
                
                <rect x="15" y="18" width="50" height="34" rx="3" 
                      fill="url(#teleGrad)" opacity="0.9" filter="url(#teleGlow)"/>
                
                <rect x="18" y="21" width="44" height="28" rx="2" 
                      fill="oklch(0.12 0.04 var(--hue))"/>
                
                <g class="text-lines">
                  <rect x="22" y="27" width="28" height="2" rx="1" 
                        fill="oklch(0.8 0.15 var(--hue))" opacity="0.7" class="line l1"/>
                  <rect x="22" y="33" width="36" height="2" rx="1" 
                        fill="oklch(0.8 0.15 var(--hue))" opacity="0.6" class="line l2"/>
                  <rect x="22" y="39" width="32" height="2" rx="1" 
                        fill="oklch(0.8 0.15 var(--hue))" opacity="0.5" class="line l3"/>
                </g>
                
                <g class="arrow-up">
                  <path d="M 40 30 L 43 27 L 46 30" 
                        stroke="oklch(0.8 0.18 var(--hue))" stroke-width="2" 
                        fill="none" stroke-linecap="round" stroke-linejoin="round"/>
                  <line x1="43" y1="27" x2="43" y2="38" 
                        stroke="oklch(0.8 0.18 var(--hue))" stroke-width="2" 
                        stroke-linecap="round"/>
                </g>
                
                <circle cx="58" cy="25" r="2" fill="oklch(0.7 0.3 20)" class="rec-dot" opacity="0.8"/>
                
                <rect x="35" y="52" width="10" height="2" rx="1" fill="url(#teleGrad)" opacity="0.8"/>
                <rect x="30" y="54" width="20" height="2" rx="1" fill="url(#teleGrad)" opacity="0.7"/>
              </svg>
            )}
            
            {tool.iconType === "link" && (
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" class="tool-svg url-icon">
                <defs>
                  <linearGradient id="urlGrad" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:oklch(0.72 0.22 var(--hue));stop-opacity:1" />
                    <stop offset="100%" style="stop-color:oklch(0.58 0.24 calc(var(--hue) + 45));stop-opacity:1" />
                  </linearGradient>
                  
                  <radialGradient id="particleGrad" cx="50%" cy="50%" r="50%">
                    <stop offset="0%" style="stop-color:oklch(0.85 0.2 var(--hue));stop-opacity:1" />
                    <stop offset="100%" style="stop-color:oklch(0.7 0.22 calc(var(--hue) + 30));stop-opacity:0" />
                  </radialGradient>
                  
                  <filter id="glow" x="-50%" y="-50%" width="200%" height="200%">
                    <feGaussianBlur stdDeviation="1.5" result="coloredBlur"/>
                    <feMerge>
                      <feMergeNode in="coloredBlur"/>
                      <feMergeNode in="SourceGraphic"/>
                    </feMerge>
                  </filter>
                  
                  <filter id="softGlow" x="-50%" y="-50%" width="200%" height="200%">
                    <feGaussianBlur stdDeviation="2.5" result="blur"/>
                    <feMerge>
                      <feMergeNode in="blur"/>
                      <feMergeNode in="SourceGraphic"/>
                    </feMerge>
                  </filter>
                </defs>
                
                <!-- PartÃ­culas flotantes -->
                <g class="particles">
                  <circle cx="30" cy="35" r="2" fill="url(#particleGrad)" class="particle p1" opacity="0"/>
                  <circle cx="45" cy="32" r="1.8" fill="url(#particleGrad)" class="particle p2" opacity="0"/>
                  <circle cx="55" cy="38" r="1.5" fill="url(#particleGrad)" class="particle p3" opacity="0"/>
                  <circle cx="70" cy="35" r="2.2" fill="url(#particleGrad)" class="particle p4" opacity="0"/>
                  <circle cx="38" cy="42" r="1.6" fill="url(#particleGrad)" class="particle p5" opacity="0"/>
                  <circle cx="62" cy="40" r="1.9" fill="url(#particleGrad)" class="particle p6" opacity="0"/>
                </g>
                
                <!-- URL Larga (top) -->
                <g class="long-url-container">
                  <rect x="20" y="28" width="60" height="8" rx="4" 
                        fill="url(#urlGrad)" opacity="0.92" 
                        filter="url(#softGlow)" class="long-url-bar"/>
                  
                  <!-- LÃ­neas de texto animadas -->
                  <g class="text-flow">
                    <rect x="24" y="31" width="8" height="2" rx="1" fill="white" opacity="0" class="text-bit tb1"/>
                    <rect x="34" y="31" width="10" height="2" rx="1" fill="white" opacity="0" class="text-bit tb2"/>
                    <rect x="46" y="31" width="7" height="2" rx="1" fill="white" opacity="0" class="text-bit tb3"/>
                    <rect x="55" y="31" width="9" height="2" rx="1" fill="white" opacity="0" class="text-bit tb4"/>
                    <rect x="66" y="31" width="10" height="2" rx="1" fill="white" opacity="0" class="text-bit tb5"/>
                  </g>
                  
                  <!-- Brillo superior -->
                  <rect x="22" y="28.5" width="56" height="3" rx="1.5" 
                        fill="white" opacity="0.25" class="shine-top"/>
                </g>
                
                <!-- Centro: VÃ³rtice/Procesamiento -->
                <g class="vortex-center">
                  <!-- Anillos concÃ©ntricos -->
                  <circle cx="50" cy="50" r="8" fill="none" stroke="url(#urlGrad)" 
                          stroke-width="1.5" opacity="0" class="ring ring1"/>
                  <circle cx="50" cy="50" r="6" fill="none" stroke="url(#urlGrad)" 
                          stroke-width="1.2" opacity="0" class="ring ring2"/>
                  <circle cx="50" cy="50" r="4" fill="none" stroke="url(#urlGrad)" 
                          stroke-width="1" opacity="0" class="ring ring3"/>
                  
                  <!-- NÃºcleo central -->
                  <circle cx="50" cy="50" r="5" fill="url(#urlGrad)" 
                          opacity="0" filter="url(#glow)" class="core"/>
                  
                  <!-- Chispas orbitales -->
                  <circle cx="50" cy="42" r="1.5" fill="oklch(0.85 0.2 var(--hue))" 
                          opacity="0" class="orbital orb1"/>
                  <circle cx="58" cy="50" r="1.5" fill="oklch(0.85 0.2 var(--hue))" 
                          opacity="0" class="orbital orb2"/>
                  <circle cx="50" cy="58" r="1.5" fill="oklch(0.85 0.2 var(--hue))" 
                          opacity="0" class="orbital orb3"/>
                  <circle cx="42" cy="50" r="1.5" fill="oklch(0.85 0.2 var(--hue))" 
                          opacity="0" class="orbital orb4"/>
                </g>
                
                <!-- URL Corta (bottom) -->
                <g class="short-url-container">
                  <rect x="32" y="64" width="36" height="8" rx="4" 
                        fill="url(#urlGrad)" opacity="0" 
                        filter="url(#softGlow)" class="short-url-bar"/>
                  
                  <!-- Icono de enlace -->
                  <g class="link-icon" opacity="0">
                    <circle cx="38" cy="68" r="2" fill="none" stroke="white" stroke-width="1.3"/>
                    <circle cx="44" cy="68" r="2" fill="none" stroke="white" stroke-width="1.3"/>
                    <line x1="39.5" y1="68" x2="42.5" y2="68" stroke="white" stroke-width="1.3"/>
                  </g>
                  
                  <!-- Texto -->
                  <text x="54" y="69.5" font-family="system-ui, -apple-system" 
                        font-size="5.5" font-weight="700" fill="white" 
                        opacity="0" class="short-text">bit.ly/x</text>
                  
                  <!-- Brillo inferior -->
                  <rect x="34" y="64.5" width="32" height="2.5" rx="1.25" 
                        fill="white" opacity="0" class="shine-bottom"/>
                </g>
                
                <!-- Ondas de energÃ­a -->
                <g class="energy-waves">
                  <path d="M 25 50 Q 30 48, 35 50 T 45 50" 
                        stroke="url(#urlGrad)" stroke-width="1.5" 
                        fill="none" opacity="0" class="wave w1"/>
                  <path d="M 55 50 Q 60 48, 65 50 T 75 50" 
                        stroke="url(#urlGrad)" stroke-width="1.5" 
                        fill="none" opacity="0" class="wave w2"/>
                </g>
              </svg>
            )}
          </div>

          <div class="tool-content">
            <h2 class="tool-name">{tool.name}</h2>
            <p class="tool-description">{tool.description}</p>
          </div>

          <div class="tool-features">
            {tool.features.map((feature) => (
              <span class="tool-feature-tag">{feature}</span>
            ))}
          </div>

          <div class="tool-cta">
            <span>Abrir herramienta</span>
            <span class="tool-cta-arrow">â†’</span>
          </div>
        </a>
      ))}
    </div>

    <div class="tools-footer">
      <p>
        ðŸ”’ Todas las herramientas funcionan en tu navegador. Tus datos nunca salen de tu dispositivo.
      </p>
    </div>
  </section>
</MainGridLayout>

<style>
  /* ============================================
     BASE
     ============================================ */
  .tools-hub {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* ============================================
     HEADER
     ============================================ */
  .tools-header {
    text-align: center;
    padding: 1rem 0 0.5rem;
  }

  .tools-header-icon {
    margin-bottom: 0.75rem;
    display: inline-block;
    animation: headerFloat 4s ease-in-out infinite;
  }

  .header-svg {
    width: 80px;
    height: 80px;
    filter: drop-shadow(0 6px 20px oklch(0.7 0.18 var(--hue) / 0.3));
  }

  @keyframes headerFloat {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }

  .hex-outline {
    animation: hexBreath 4s ease-in-out infinite;
    transform-origin: 50px 41px;
  }

  @keyframes hexBreath {
    0%, 100% { transform: scale(1); opacity: 0.5; }
    50% { transform: scale(1.05); opacity: 0.7; }
  }

  .center-glow {
    animation: glowPulse 3s ease-in-out infinite;
  }

  @keyframes glowPulse {
    0%, 100% { transform: scale(1); opacity: 0.7; }
    50% { transform: scale(1.1); opacity: 0.9; }
  }

  .star {
    animation: starSpin 12s linear infinite;
    transform-origin: 50px 41px;
  }

  @keyframes starSpin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .dot {
    animation: dotPulse 3s ease-in-out infinite;
  }

  .d1 { animation-delay: 0s; }
  .d2 { animation-delay: 0.75s; }
  .d3 { animation-delay: 1.5s; }
  .d4 { animation-delay: 2.25s; }

  @keyframes dotPulse {
    0%, 100% { opacity: 0.6; transform: scale(1); }
    50% { opacity: 1; transform: scale(1.3); }
  }

  .tools-title {
    font-size: 2.5rem;
    font-weight: 800;
    letter-spacing: -0.02em;
    background: linear-gradient(
      135deg,
      oklch(0.7 0.2 var(--hue)),
      oklch(0.6 0.22 calc(var(--hue) + 40)),
      oklch(0.7 0.2 var(--hue))
    );
    background-size: 200% 100%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
    line-height: 1.2;
    animation: titleShimmer 4s ease-in-out infinite, titleFade 0.6s ease-out;
  }

  @keyframes titleShimmer {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  @keyframes titleFade {
    from { opacity: 0; transform: translateY(-15px); }
    to { opacity: 1; transform: translateY(0); }
  }

  :global(.dark) .tools-title {
    background: linear-gradient(
      135deg,
      oklch(0.8 0.18 var(--hue)),
      oklch(0.7 0.2 calc(var(--hue) + 40)),
      oklch(0.8 0.18 var(--hue))
    );
    background-size: 200% 100%;
    -webkit-background-clip: text;
    background-clip: text;
  }

  .tools-subtitle {
    color: #475569;
    font-size: 1.05rem;
    line-height: 1.5;
    max-width: 32rem;
    margin: 0 auto 0.75rem;
    animation: subtitleFade 0.6s ease-out 0.15s both;
  }

  @keyframes subtitleFade {
    from { opacity: 0; transform: translateY(-8px); }
    to { opacity: 1; transform: translateY(0); }
  }

  :global(.dark) .tools-subtitle {
    color: #94a3b8;
  }

  .tools-stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    font-weight: 600;
    animation: statsFade 0.6s ease-out 0.3s both;
  }

  @keyframes statsFade {
    from { opacity: 0; transform: translateY(8px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .tools-stat {
    color: oklch(0.55 0.14 var(--hue));
  }

  :global(.dark) .tools-stat {
    color: oklch(0.72 0.14 var(--hue));
  }

  .tools-stat-divider {
    color: #cbd5e1;
  }

  :global(.dark) .tools-stat-divider {
    color: #475569;
  }

  /* ============================================
     GRID Y CARDS
     ============================================ */
  .tools-grid {
    display: grid;
    gap: 1.25rem;
    grid-template-columns: 1fr;
  }

  @media (min-width: 768px) {
    .tools-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .tool-card {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1.75rem;
    background: var(--card-bg);
    border-radius: var(--radius-large);
    border: 1px solid rgba(0, 0, 0, 0.06);
    text-decoration: none;
    color: inherit;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    overflow: hidden;
    animation: cardFade 0.5s ease-out both;
  }

  @keyframes cardFade {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .tool-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      oklch(0.7 0.18 var(--hue) / 0.05),
      transparent
    );
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .tool-card:hover::before {
    opacity: 1;
  }

  .tool-card:hover {
    transform: translateY(-4px);
    border-color: oklch(0.7 0.15 var(--hue) / 0.2);
    box-shadow: 
      0 12px 28px oklch(0.5 0.1 var(--hue) / 0.12),
      0 4px 12px oklch(0.5 0.1 var(--hue) / 0.08);
  }

  :global(.dark) .tool-card {
    border-color: rgba(255, 255, 255, 0.08);
  }

  :global(.dark) .tool-card:hover {
    border-color: oklch(0.7 0.15 var(--hue) / 0.3);
  }

  .tool-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    padding: 0.35rem 0.75rem;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.02em;
    text-transform: uppercase;
    background: oklch(0.7 0.18 var(--hue) / 0.12);
    color: oklch(0.55 0.2 var(--hue));
    border-radius: var(--radius-medium);
    backdrop-filter: blur(8px);
  }

  :global(.dark) .tool-badge {
    background: oklch(0.7 0.18 var(--hue) / 0.2);
    color: oklch(0.75 0.18 var(--hue));
  }

  .tool-icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 120px;
    margin-bottom: 0.5rem;
  }

  .tool-svg {
    width: 100px;
    height: 100px;
    transition: transform 0.3s ease;
  }

  .tool-card:hover .tool-svg {
    transform: scale(1.05);
  }

  .tool-content {
    flex: 1;
  }

  .tool-name {
    font-size: 1.4rem;
    font-weight: 700;
    letter-spacing: -0.01em;
    color: #1e293b;
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  :global(.dark) .tool-name {
    color: #f1f5f9;
  }

  .tool-description {
    font-size: 0.95rem;
    line-height: 1.5;
    color: #64748b;
  }

  :global(.dark) .tool-description {
    color: #94a3b8;
  }

  .tool-features {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tool-feature-tag {
    padding: 0.35rem 0.65rem;
    font-size: 0.8rem;
    font-weight: 600;
    background: #f1f5f9;
    color: #475569;
    border-radius: var(--radius-small);
    white-space: nowrap;
  }

  :global(.dark) .tool-feature-tag {
    background: #1e293b;
    color: #94a3b8;
  }

  .tool-cta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 0.75rem;
    margin-top: 0.75rem;
    border-top: 1px solid #e2e8f0;
    font-weight: 600;
    font-size: 0.95rem;
    color: oklch(0.55 0.18 var(--hue));
  }

  :global(.dark) .tool-cta {
    border-top-color: #334155;
    color: oklch(0.72 0.16 var(--hue));
  }

  .tool-cta-arrow {
    transition: transform 0.3s ease;
  }

  .tool-card:hover .tool-cta-arrow {
    transform: translateX(4px);
  }

  .tools-footer {
    text-align: center;
    padding: 1.5rem 0;
    color: #64748b;
    font-size: 0.9rem;
  }

  :global(.dark) .tools-footer {
    color: #94a3b8;
  }

  /* ============================================
     TELEPROMPTER ICON (ORIGINAL - SIN CAMBIOS)
     ============================================ */
  .text-lines rect {
    animation: textScroll 3s ease-in-out infinite;
  }

  .l1 { animation-delay: 0s; }
  .l2 { animation-delay: 0.3s; }
  .l3 { animation-delay: 0.6s; }

  @keyframes textScroll {
    0%, 100% { opacity: 0.7; transform: translateY(0); }
    50% { opacity: 0.4; transform: translateY(3px); }
  }

  .arrow-up {
    animation: arrowBounce 2s ease-in-out infinite;
  }

  @keyframes arrowBounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-3px); }
  }

  .rec-dot {
    animation: recBlink 2s ease-in-out infinite;
  }

  @keyframes recBlink {
    0%, 100% { opacity: 0.8; }
    50% { opacity: 0.3; }
  }

  /* ============================================
     URL SHORTENER - NUEVA ANIMACIÃ“N PREMIUM
     ============================================ */
  
  /* PartÃ­culas flotantes */
  .particle {
