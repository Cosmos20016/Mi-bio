<script>
  // ============================================
  // OPTIMIZACIÃ“N ULTRA: Solo activar animaciones cuando son visibles
  // ============================================
  
  const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
  
  if (!prefersReducedMotion) {
    const observerOptions = {
      rootMargin: '100px',
      threshold: [0, 0.5, 1],
    };
    
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          const svg = entry.target.querySelector('[data-icon-svg]');
          if (!svg) return;
          
          requestAnimationFrame(() => {
            if (entry.isIntersecting) {
              svg.classList.add('animate-active');
              
              // Pre-warm GPU solo cuando estÃ¡ visible
              if (entry.intersectionRatio > 0.5) {
                svg.style.willChange = 'transform, opacity';
                setTimeout(() => svg.style.willChange = 'auto', 300);
              }
            } else {
              svg.classList.remove('animate-active');
            }
          });
        });
      },
      observerOptions
    );
    
    document.querySelectorAll('[data-tool-card]').forEach((card) => observer.observe(card));
  }
</script>

