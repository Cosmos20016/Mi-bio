---
import MainGridLayout from "@layouts/MainGridLayout.astro";
import { url } from "@utils/url-utils";

const tools = [
	{
		name: "Teleprompter Studio",
		description:
			"Tu estudio profesional de lectura en pantalla. Velocidad precisa, espejo, focus mode, atajos de teclado y countdown.",
		href: url("/herramientas/teleprompter/"),
		iconType: "teleprompter",
		badge: "Pro",
		features: ["Modo espejo", "Focus mode", "Atajos de teclado", "Countdown"],
	},
	{
		name: "Acortador de URLs",
		description:
			"Acorta, organiza y gestiona tus enlaces. QR codes al instante, historial con estadÃ­sticas y exportaciÃ³n.",
		href: url("/herramientas/acortador/"),
		iconType: "link",
		badge: "Sin publicidad",
		features: ["QR Codes", "CategorÃ­as", "Sin publicidad", "Exportar JSON"],
	},
];
---

<MainGridLayout title="Herramientas" description="Herramientas premium para creadores">
  <section class="tools-hub">
    <header class="tools-header">
      <div class="tools-header-icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" class="header-svg">
          <defs>
            <linearGradient id="headerGrad" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" style="stop-color:oklch(0.7 0.2 var(--hue));stop-opacity:1" />
              <stop offset="100%" style="stop-color:oklch(0.6 0.22 calc(var(--hue) + 40));stop-opacity:1" />
            </linearGradient>
            <filter id="glow">
              <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
              <feMerge>
                <feMergeNode in="coloredBlur"/>
                <feMergeNode in="SourceGraphic"/>
              </feMerge>
            </filter>
          </defs>
          
          <polygon points="50,15 75,28 75,54 50,67 25,54 25,28" 
                   fill="none" stroke="url(#headerGrad)" stroke-width="2" 
                   opacity="0.5" class="hex-outline"/>
          
          <circle cx="50" cy="41" r="12" fill="url(#headerGrad)" 
                  filter="url(#glow)" opacity="0.7" class="center-glow"/>
          
          <path d="M 50 33 L 52 38 L 57 39 L 53 43 L 54 48 L 50 45 L 46 48 L 47 43 L 43 39 L 48 38 Z" 
                fill="white" opacity="0.9" class="star"/>
          
          <circle cx="35" cy="30" r="2" fill="url(#headerGrad)" class="dot d1" opacity="0.6"/>
          <circle cx="65" cy="30" r="2" fill="url(#headerGrad)" class="dot d2" opacity="0.6"/>
          <circle cx="35" cy="52" r="2" fill="url(#headerGrad)" class="dot d3" opacity="0.6"/>
          <circle cx="65" cy="52" r="2" fill="url(#headerGrad)" class="dot d4" opacity="0.6"/>
        </svg>
      </div>

      <h1 class="tools-title">Herramientas</h1>
      <p class="tools-subtitle">
        Suite exclusiva de herramientas profesionales para potenciar tu contenido y creatividad.
      </p>
      <div class="tools-stats">
        <span class="tools-stat">{tools.length} herramientas</span>
        <span class="tools-stat-divider">Â·</span>
        <span class="tools-stat">100% gratuitas</span>
        <span class="tools-stat-divider">Â·</span>
        <span class="tools-stat">Sin publicidad</span>
      </div>
    </header>

    <div class="tools-grid">
      {tools.map((tool, i) => (
        <a
          class="tool-card"
          href={tool.href}
          style={`animation-delay: calc(var(--content-delay) + ${i * 100}ms)`}
        >
          <div class="tool-badge">{tool.badge}</div>

          <div class="tool-icon-wrapper">
            {tool.iconType === "teleprompter" && (
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 80 80" class="tool-svg">
                <defs>
                  <linearGradient id="teleGrad" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:oklch(0.7 0.2 var(--hue));stop-opacity:1" />
                    <stop offset="100%" style="stop-color:oklch(0.55 0.22 calc(var(--hue) + 40));stop-opacity:1" />
                  </linearGradient>
                  <filter id="softGlow">
                    <feGaussianBlur stdDeviation="1.5" result="coloredBlur"/>
                    <feMerge>
                      <feMergeNode in="coloredBlur"/>
                      <feMergeNode in="SourceGraphic"/>
                    </feMerge>
                  </filter>
                </defs>
                
                <rect x="15" y="18" width="50" height="34" rx="3" 
                      fill="url(#teleGrad)" opacity="0.9" filter="url(#softGlow)"/>
                
                <rect x="18" y="21" width="44" height="28" rx="2" 
                      fill="oklch(0.12 0.04 var(--hue))"/>
                
                <g class="text-lines">
                  <rect x="22" y="27" width="28" height="2" rx="1" 
                        fill="oklch(0.8 0.15 var(--hue))" opacity="0.7" class="line l1"/>
                  <rect x="22" y="33" width="36" height="2" rx="1" 
                        fill="oklch(0.8 0.15 var(--hue))" opacity="0.6" class="line l2"/>
                  <rect x="22" y="39" width="32" height="2" rx="1" 
                        fill="oklch(0.8 0.15 var(--hue))" opacity="0.5" class="line l3"/>
                </g>
                
                <g class="arrow-up">
                  <path d="M 40 30 L 43 27 L 46 30" 
                        stroke="oklch(0.8 0.18 var(--hue))" stroke-width="2" 
                        fill="none" stroke-linecap="round" stroke-linejoin="round"/>
                  <line x1="43" y1="27" x2="43" y2="38" 
                        stroke="oklch(0.8 0.18 var(--hue))" stroke-width="2" 
                        stroke-linecap="round"/>
                </g>
                
                <circle cx="58" cy="25" r="2" fill="oklch(0.7 0.3 20)" class="rec-dot" opacity="0.8"/>
                
                <rect x="35" y="52" width="10" height="2" rx="1" fill="url(#teleGrad)" opacity="0.8"/>
                <rect x="30" y="54" width="20" height="2" rx="1" fill="url(#teleGrad)" opacity="0.7"/>
              </svg>
            )}
            
            {tool.iconType === "link" && (
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 80 80" class="tool-svg">
                <defs>
                  <linearGradient id="linkGrad" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:oklch(0.7 0.2 var(--hue));stop-opacity:1" />
                    <stop offset="100%" style="stop-color:oklch(0.55 0.22 calc(var(--hue) + 40));stop-opacity:1" />
                  </linearGradient>
                  <filter id="linkGlow">
                    <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
                    <feMerge>
                      <feMergeNode in="coloredBlur"/>
                      <feMergeNode in="SourceGraphic"/>
                    </feMerge>
                  </filter>
                </defs>
                
                <!-- URL LARGA - parte izquierda -->
                <g class="url-left">
                  <rect x="10" y="28" width="25" height="8" rx="4" 
                        fill="oklch(0.3 0.06 var(--hue))" opacity="0.8"/>
                  <line x1="14" y1="32" x2="30" y2="32" 
                        stroke="oklch(0.55 0.12 var(--hue))" stroke-width="2" 
                        stroke-linecap="round" opacity="0.6"/>
                </g>
                
                <!-- URL LARGA - parte derecha -->
                <g class="url-right">
                  <rect x="45" y="28" width="25" height="8" rx="4" 
                        fill="oklch(0.3 0.06 var(--hue))" opacity="0.8"/>
                  <line x1="50" y1="32" x2="66" y2="32" 
                        stroke="oklch(0.55 0.12 var(--hue))" stroke-width="2" 
                        stroke-linecap="round" opacity="0.6"/>
                </g>
                
                <!-- TIJERA - ELEMENTO PRINCIPAL -->
                <g class="scissors-cutting" filter="url(#linkGlow)">
                  <!-- Anillo izquierdo -->
                  <circle cx="32" cy="32" r="5" fill="none" 
                          stroke="url(#linkGrad)" stroke-width="2.5" class="ring-left"/>
                  
                  <!-- Anillo derecho -->
                  <circle cx="48" cy="32" r="5" fill="none" 
                          stroke="url(#linkGrad)" stroke-width="2.5" class="ring-right"/>
                  
                  <!-- Hoja izquierda -->
                  <path d="M 32 32 L 26 22" 
                        stroke="url(#linkGrad)" stroke-width="3" 
                        stroke-linecap="round" class="blade-left"/>
                  
                  <!-- Hoja derecha -->
                  <path d="M 48 32 L 54 22" 
                        stroke="url(#linkGrad)" stroke-width="3" 
                        stroke-linecap="round" class="blade-right"/>
                  
                  <!-- Punto de uniÃ³n -->
                  <circle cx="40" cy="32" r="2.5" fill="oklch(0.85 0.12 var(--hue))"/>
                  
                  <!-- LÃ­neas de corte animadas -->
                  <line x1="36" y1="28" x2="36" y2="36" 
                        stroke="oklch(0.8 0.2 var(--hue))" stroke-width="1.5" 
                        stroke-dasharray="2 2" opacity="0.6" class="cut-line cl1"/>
                  <line x1="44" y1="28" x2="44" y2="36" 
                        stroke="oklch(0.8 0.2 var(--hue))" stroke-width="1.5" 
                        stroke-dasharray="2 2" opacity="0.6" class="cut-line cl2"/>
                </g>
                
                <!-- URL CORTA - RESULTADO -->
                <g class="url-short">
                  <rect x="25" y="48" width="30" height="12" rx="6" 
                        fill="url(#linkGrad)" filter="url(#linkGlow)" 
                        opacity="0.95"/>
                  
                  <text x="40" y="56" 
                        font-family="monospace" font-size="7" font-weight="bold" 
                        fill="white" text-anchor="middle">bit.ly</text>
                  
                  <!-- Check mark sutil -->
                  <g transform="translate(52, 52)">
                    <circle cx="0" cy="0" r="4" fill="oklch(0.65 0.2 140)" opacity="0.9"/>
                    <path d="M -1.5 0 L -0.5 1 L 1.5 -1" 
                          stroke="white" stroke-width="1.2" 
                          fill="none" stroke-linecap="round" stroke-linejoin="round"/>
                  </g>
                </g>
              </svg>
            )}
          </div>

          <div class="tool-content">
            <h2 class="tool-name">{tool.name}</h2>
            <p class="tool-description">{tool.description}</p>
          </div>

          <div class="tool-features">
            {tool.features.map((feature) => (
              <span class="tool-feature-tag">{feature}</span>
            ))}
          </div>

          <div class="tool-cta">
            <span>Abrir herramienta</span>
            <span class="tool-cta-arrow">â†’</span>
          </div>
        </a>
      ))}
    </div>

    <div class="tools-footer">
      <p>
        ðŸ”’ Todas las herramientas funcionan en tu navegador. Tus datos nunca salen de tu dispositivo.
      </p>
    </div>
  </section>
</MainGridLayout>

<style>
  .tools-hub {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .tools-header {
    text-align: center;
    padding: 1rem 0 0.5rem;
  }

  .tools-header-icon {
    margin-bottom: 0.75rem;
    display: inline-block;
    animation: headerFloat 4s ease-in-out infinite;
  }

  .header-svg {
    width: 80px;
    height: 80px;
    filter: drop-shadow(0 6px 20px oklch(0.7 0.18 var(--hue) / 0.3));
  }

  @keyframes headerFloat {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }

  .hex-outline {
    animation: hexBreath 4s ease-in-out infinite;
    transform-origin: 50px 41px;
  }

  @keyframes hexBreath {
    0%, 100% { transform: scale(1); opacity: 0.5; }
    50% { transform: scale(1.05); opacity: 0.7; }
  }

  .center-glow {
    animation: glowPulse 3s ease-in-out infinite;
  }

  @keyframes glowPulse {
    0%, 100% { transform: scale(1); opacity: 0.7; }
    50% { transform: scale(1.1); opacity: 0.9; }
  }

  .star {
    animation: starSpin 12s linear infinite;
    transform-origin: 50px 41px;
  }

  @keyframes starSpin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .dot {
    animation: dotPulse 3s ease-in-out infinite;
  }

  .d1 { animation-delay: 0s; }
  .d2 { animation-delay: 0.75s; }
  .d3 { animation-delay: 1.5s; }
  .d4 { animation-delay: 2.25s; }

  @keyframes dotPulse {
    0%, 100% { opacity: 0.6; transform: scale(1); }
    50% { opacity: 1; transform: scale(1.3); }
  }

  .tools-title {
    font-size: 2.5rem;
    font-weight: 800;
    letter-spacing: -0.02em;
    background: linear-gradient(
      135deg,
      oklch(0.7 0.2 var(--hue)),
      oklch(0.6 0.22 calc(var(--hue) + 40)),
      oklch(0.7 0.2 var(--hue))
    );
    background-size: 200% 100%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
    line-height: 1.2;
    animation: titleShimmer 4s ease-in-out infinite, titleFade 0.6s ease-out;
  }

  @keyframes titleShimmer {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  @keyframes titleFade {
    from { opacity: 0; transform: translateY(-15px); }
    to { opacity: 1; transform: translateY(0); }
  }

  :global(.dark) .tools-title {
    background: linear-gradient(
      135deg,
      oklch(0.8 0.18 var(--hue)),
      oklch(0.7 0.2 calc(var(--hue) + 40)),
      oklch(0.8 0.18 var(--hue))
    );
    background-size: 200% 100%;
    -webkit-background-clip: text;
    background-clip: text;
  }

  .tools-subtitle {
    color: #475569;
    font-size: 1.05rem;
    line-height: 1.5;
    max-width: 32rem;
    margin: 0 auto 0.75rem;
    animation: subtitleFade 0.6s ease-out 0.15s both;
  }

  @keyframes subtitleFade {
    from { opacity: 0; transform: translateY(-8px); }
    to { opacity: 1; transform: translateY(0); }
  }

  :global(.dark) .tools-subtitle {
    color: #94a3b8;
  }

  .tools-stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    font-weight: 600;
    animation: statsFade 0.6s ease-out 0.3s both;
  }

  @keyframes statsFade {
    from { opacity: 0; transform: translateY(8px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .tools-stat {
    color: oklch(0.55 0.14 var(--hue));
  }

  :global(.dark) .tools-stat {
    color: oklch(0.72 0.14 var(--hue));
  }

  .tools-stat-divider {
    color: #cbd5e1;
  }

  :global(.dark) .tools-stat-divider {
    color: #475569;
  }

  .tools-grid {
    display: grid;
    gap: 1.25rem;
    grid-template-columns: 1fr;
  }

  @media (min-width: 768px) {
    .tools-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .tool-card {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1.75rem;
    background: var(--card-bg);
    border-radius: var(--radius-large);
    border: 1px solid rgba(0, 0, 0, 0.06);
    text-decoration: none;
    color: inherit;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    overflow: hidden;
    animation: cardFade 0.5s ease-out both;
  }

  @keyframes cardFade {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  :global(.dark) .tool-card {
    border-color: rgba(255, 255, 255, 0.08);
  }

  .tool-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(
      90deg,
      transparent,
      oklch(0.7 0.2 var(--hue)),
      transparent
    );
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .tool-card::after {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(
      circle at 50% 50%,
      oklch(0.7 0.2 var(--hue) / 0.05) 0%,
      transparent 70%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .tool-card:hover {
    transform: translateY(-6px);
    box-shadow: 
      0 20px 40px oklch(0.7 0.2 var(--hue) / 0.2),
      0 8px 16px rgba(0, 0, 0, 0.08);
    border-color: oklch(0.75 0.12 var(--hue));
  }

  :global(.dark) .tool-card:hover {
    box-shadow: 
      0 20px 40px oklch(0.5 0.16 var(--hue) / 0.3),
      0 8px 16px rgba(0, 0, 0, 0.4);
    border-color: oklch(0.5 0.12 var(--hue));
  }

  .tool-card:hover::before,
  .tool-card:hover::after {
    opacity: 1;
  }

  .tool-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.3rem 0.65rem;
    border-radius: 9999px;
    background: linear-gradient(135deg, oklch(0.95 0.06 var(--hue)), oklch(0.92 0.08 calc(var(--hue) + 15)));
    color: oklch(0.5 0.16 var(--hue));
    box-shadow: 0 2px 8px oklch(0.7 0.14 var(--hue) / 0.25);
    z-index: 1;
  }

  :global(.dark) .tool-badge {
    background: linear-gradient(135deg, oklch(0.35 0.08 var(--hue)), oklch(0.32 0.1 calc(var(--hue) + 15)));
    color: oklch(0.8 0.14 var(--hue));
  }

  .tool-icon-wrapper {
    width: 4.5rem;
    height: 4.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 1.25rem;
    background: linear-gradient(135deg, oklch(0.97 0.05 var(--hue)), oklch(0.95 0.07 calc(var(--hue) + 15)));
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    position: relative;
    box-shadow: 
      0 6px 12px oklch(0.7 0.14 var(--hue) / 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.5);
  }

  :global(.dark) .tool-icon-wrapper {
    background: linear-gradient(135deg, oklch(0.3 0.07 var(--hue)), oklch(0.27 0.09 calc(var(--hue) + 15)));
    box-shadow: 
      0 6px 12px oklch(0.3 0.1 var(--hue) / 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.08);
  }

  .tool-card:hover .tool-icon-wrapper {
    transform: scale(1.1) rotate(3deg);
    box-shadow: 
      0 10px 20px oklch(0.7 0.18 var(--hue) / 0.25),
      inset 0 1px 0 rgba(255, 255, 255, 0.7);
  }

  :global(.dark) .tool-card:hover .tool-icon-wrapper {
    box-shadow: 
      0 10px 20px oklch(0.5 0.14 var(--hue) / 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.12);
  }

  .tool-svg {
    width: 100%;
    height: 100%;
  }

  /* TELEPROMPTER */
  .text-lines .line {
    animation: lineFlow 2.5s ease-in-out infinite;
  }

  .l1 { animation-delay: 0s; }
  .l2 { animation-delay: 0.4s; }
  .l3 { animation-delay: 0.8s; }

  @keyframes lineFlow {
    0%, 100% { opacity: 0.7; transform: translateY(0); }
    50% { opacity: 0.3; transform: translateY(-3px); }
  }

  .arrow-up {
    animation: arrowFloat 1.5s ease-in-out infinite;
  }

  @keyframes arrowFloat {
    0%, 100% { transform: translateY(0); opacity: 0.9; }
    50% { transform: translateY(-3px); opacity: 1; }
  }

  .rec-dot {
    animation: recPulse 1.5s ease-in-out infinite;
  }

  @keyframes recPulse {
    0%, 100% { opacity: 0.8; }
    50% { opacity: 0.3; }
  }

  /* LINK SHORTENER - ENFOQUE EN TIJERA CORTANDO */
  .url-left {
    animation: urlShrinkLeft 2s ease-in-out infinite;
  }

  @keyframes urlShrinkLeft {
    0%, 100% { transform: translateX(0); opacity: 0.8; }
    50% { transform: translateX(-3px); opacity: 0.5; }
  }

  .url-right {
    animation: urlShrinkRight 2s ease-in-out infinite;
  }

  @keyframes urlShrinkRight {
    0%, 100% { transform: translateX(0); opacity: 0.8; }
    50% { transform: translateX(3px); opacity: 0.5; }
  }

  .scissors-cutting {
    animation: scissorsOpen 1.8s ease-in-out infinite;
    transform-origin: 40px 32px;
  }

  @keyframes scissorsOpen {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }

  .ring-left {
    animation: ringPulseLeft 1.8s ease-in-out infinite;
    transform-origin: 32px 32px;
  }

  @keyframes ringPulseLeft {
    0%, 100% { transform: rotate(0deg); }
    50% { transform: rotate(-8deg); }
  }

  .ring-right {
    animation: ringPulseRight 1.8s ease-in-out infinite;
    transform-origin: 48px 32px;
  }

  @keyframes ringPulseRight {
    0%, 100% { transform: rotate(0deg); }
    50% { transform: rotate(8deg); }
  }

  .blade-left {
    animation: bladeLeft 1.8s ease-in-out infinite;
  }

  @keyframes bladeLeft {
    0%, 100% { transform: rotate(0deg); opacity: 1; }
    50% { transform: rotate(-5deg); opacity: 0.8; }
  }

  .blade-right {
    animation: bladeRight 1.8s ease-in-out infinite;
  }

  @keyframes bladeRight {
    0%, 100% { transform: rotate(0deg); opacity: 1; }
    50% { transform: rotate(5deg); opacity: 0.8; }
  }

  .cut-line {
    animation: cutFlash 2s ease-in-out infinite;
  }

  .cl1 { animation-delay: 0s; }
  .cl2 { animation-delay: 0.3s; }

  @keyframes cutFlash {
    0%, 100% { opacity: 0.6; stroke-dashoffset: 0; }
    50% { opacity: 0.2; stroke-dashoffset: 4; }
  }

  .url-short {
    animation: shortGlow 2s ease-in-out infinite;
  }

  @keyframes shortGlow {
    0%, 100% { opacity: 0.95; transform: scale(1) translateY(0); }
    50% { opacity: 1; transform: scale(1.03) translateY(-1px); }
  }

  .tool-card:hover .tool-svg {
    animation: svgHover 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  @keyframes svgHover {
    0% { transform: scale(1); }
    50% { transform: scale(1.1); }
    100% { transform: scale(1); }
  }

