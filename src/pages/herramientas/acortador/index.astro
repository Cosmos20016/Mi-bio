---
import ShareToolButton from "@components/ShareToolButton.astro";
import UrlShortener from "@components/url-shortener/UrlShortener.svelte";
import MainGridLayout from "@layouts/MainGridLayout.astro";
import { url } from "@utils/url-utils";
---

<MainGridLayout title="Acortador de URLs" description="Acortador de URLs premium para creadores">
  <section class="tool-page">
    <!-- Navegaci√≥n superior mejorada con accesibilidad -->
    <nav class="tool-nav" aria-label="Breadcrumb">
      <ol class="tool-nav-list">
        <li>
          <a class="tool-nav-back" href={url("/herramientas/")} aria-label="Volver a Herramientas">
            <span class="tool-nav-arrow" aria-hidden="true">‚Üê</span>
            <span>Herramientas</span>
          </a>
        </li>
        <li class="tool-nav-breadcrumb">
          <span class="breadcrumb-sep" aria-hidden="true">/</span>
          <span class="breadcrumb-current" aria-current="page">Acortador de URLs</span>
        </li>
      </ol>
    </nav>

    <!-- Header de la herramienta -->
    <header class="tool-page-header">
      <div class="tool-page-icon-wrapper" aria-hidden="true">
        <span class="tool-page-icon">üîó</span>
      </div>
      <div class="tool-page-content">
        <h1 class="tool-page-title">Acortador de URLs</h1>
        <p class="tool-page-description">
          Acorta, organiza y comparte tus enlaces favoritos. QR codes al instante, historial completo y exportaci√≥n sin l√≠mites.
        </p>
        <div class="tool-page-header-actions">
          <div class="tool-page-badges" role="list" aria-label="Caracter√≠sticas de la herramienta">
            <span class="tool-page-badge" role="listitem">Sin publicidad</span>
            <span class="tool-page-badge" role="listitem">Privado</span>
            <span class="tool-page-badge" role="listitem">Gratuito</span>
          </div>
          <ShareToolButton 
            toolName="Acortador de URLs"
            toolDescription="Acorta, organiza y comparte tus enlaces favoritos con QR codes al instante"
            toolUrl="/herramientas/acortador/"
          />
        </div>
      </div>
    </header>

    <UrlShortener client:only="svelte" />
  </section>
</MainGridLayout>

<style>
  .tool-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    width: 100%;
    max-width: 100%;
    overflow-x: hidden;
  }

  /* Navigation */
  .tool-nav {
    display: flex;
    align-items: center;
    width: 100%;
  }

  .tool-nav-list {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    flex-wrap: wrap;
    list-style: none;
    margin: 0;
    padding: 0;
    width: 100%;
  }

  .tool-nav-back {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.9rem;
    font-weight: 600;
    color: oklch(0.55 0.12 var(--hue, 250));
    text-decoration: none;
    padding: 0.4rem 0.75rem;
    border-radius: 0.5rem;
    transition: all 0.2s ease;
  }

  :global(.dark) .tool-nav-back {
    color: oklch(0.72 0.12 var(--hue, 250));
  }

  .tool-nav-back:hover {
    background: oklch(0.95 0.025 var(--hue, 250));
    color: oklch(0.5 0.14 var(--hue, 250));
  }

  :global(.dark) .tool-nav-back:hover {
    background: oklch(0.28 0.03 var(--hue, 250));
    color: oklch(0.78 0.14 var(--hue, 250));
  }

  .tool-nav-back:focus-visible {
    outline: 2px solid oklch(0.5 0.14 var(--hue, 250));
    outline-offset: 2px;
    background: oklch(0.95 0.025 var(--hue, 250));
  }

  :global(.dark) .tool-nav-back:focus-visible {
    outline-color: oklch(0.78 0.14 var(--hue, 250));
    background: oklch(0.28 0.03 var(--hue, 250));
  }

  .tool-nav-arrow {
    transition: transform 0.2s ease;
    font-size: 1rem;
  }

  .tool-nav-back:hover .tool-nav-arrow {
    transform: translateX(-3px);
  }

  .tool-nav-breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.85rem;
    min-width: 0;
  }

  .breadcrumb-sep {
    color: #cbd5e1;
    flex-shrink: 0;
  }

  :global(.dark) .breadcrumb-sep {
    color: #475569;
  }

  .breadcrumb-current {
    color: #64748b;
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  :global(.dark) .breadcrumb-current {
    color: #94a3b8;
  }

  /* Header */
  .tool-page-header {
    display: flex;
    align-items: flex-start;
    gap: 1.25rem;
    padding: 1.25rem 1.5rem;
    background: var(--card-bg, #ffffff);
    border-radius: var(--radius-large, 1rem);
    border: 1px solid rgba(0, 0, 0, 0.06);
    width: 100%;
    box-sizing: border-box;
  }

  :global(.dark) .tool-page-header {
    background: var(--card-bg, oklch(0.2 0.02 var(--hue, 250)));
    border-color: rgba(255, 255, 255, 0.08);
  }

  .tool-page-icon-wrapper {
    width: 3.5rem;
    height: 3.5rem;
    min-width: 3.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 1rem;
    background: oklch(0.95 0.03 var(--hue, 250));
    flex-shrink: 0;
  }

  :global(.dark) .tool-page-icon-wrapper {
    background: oklch(0.28 0.03 var(--hue, 250));
  }

  .tool-page-icon {
    font-size: 1.75rem;
  }

  .tool-page-content {
    flex: 1;
    min-width: 0;
    width: 100%;
  }

  .tool-page-title {
    font-size: 1.75rem;
    font-weight: 800;
    letter-spacing: -0.01em;
    color: oklch(0.65 0.16 var(--hue, 250));
    background: linear-gradient(
      135deg,
      oklch(0.65 0.16 var(--hue, 250)),
      oklch(0.6 0.18 min(360, max(0, calc(var(--hue, 250) + 40))))
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.35rem;
    line-height: 1.2;
    word-wrap: break-word;
  }

  @supports not (background-clip: text) {
    .tool-page-title {
      background: none;
      color: oklch(0.65 0.16 var(--hue, 250));
    }
  }

  :global(.dark) .tool-page-title {
    color: oklch(0.75 0.14 var(--hue, 250));
    background: linear-gradient(
      135deg,
      oklch(0.75 0.14 var(--hue, 250)),
      oklch(0.7 0.16 min(360, max(0, calc(var(--hue, 250) + 40))))
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  @supports not (background-clip: text) {
    :global(.dark) .tool-page-title {
      background: none;
      color: oklch(0.75 0.14 var(--hue, 250));
    }
  }

  .tool-page-description {
    font-size: 0.9rem;
    color: #64748b;
    line-height: 1.55;
    margin-bottom: 0.65rem;
  }

  :global(.dark) .tool-page-description {
    color: #94a3b8;
  }

  .tool-page-header-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .tool-page-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .tool-page-badge {
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    padding: 0.2rem 0.55rem;
    border-radius: 9999px;
    background: oklch(0.93 0.04 var(--hue, 250));
    color: oklch(0.5 0.14 var(--hue, 250));
    white-space: nowrap;
  }

  :global(.dark) .tool-page-badge {
    background: oklch(0.3 0.05 var(--hue, 250));
    color: oklch(0.78 0.12 var(--hue, 250));
  }

  /* Tablet ajustes */
  @media (max-width: 768px) {
    .tool-page-header {
      padding: 1.125rem 1.375rem;
    }

    .tool-page-title {
      font-size: 1.625rem;
    }

    .tool-page-description {
      font-size: 0.875rem;
    }
  }

  /* Mobile */
  @media (max-width: 640px) {
    .tool-page {
      gap: 1.25rem;
    }

    .tool-nav-back {
      font-size: 0.85rem;
      padding: 0.35rem 0.65rem;
    }

    .tool-nav-breadcrumb {
      font-size: 0.8rem;
    }

    .tool-page-header {
      flex-direction: row;
      align-items: flex-start;
      padding: 1rem;
      gap: 1rem;
    }

    .tool-page-icon-wrapper {
      width: 3rem;
      height: 3rem;
      min-width: 3rem;
    }

    .tool-page-icon {
      font-size: 1.5rem;
    }

    .tool-page-title {
      font-size: 1.375rem;
      margin-bottom: 0.25rem;
    }

    .tool-page-description {
      font-size: 0.85rem;
      line-height: 1.5;
      margin-bottom: 0.75rem;
    }

    .tool-page-header-actions {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.65rem;
      width: 100%;
    }

    .tool-page-badges {
      gap: 0.35rem;
    }

    .tool-page-badge {
      font-size: 0.65rem;
      padding: 0.2rem 0.5rem;
    }

    /* Asegurar que el ShareToolButton tenga ancho completo en m√≥vil */
    .tool-page-header-actions :global(.share-tool-button),
    .tool-page-header-actions :global(button),
    .tool-page-header-actions :global([data-share-button]) {
      width: 100%;
      max-width: 100%;
    }
  }

  /* Mobile peque√±o */
  @media (max-width: 480px) {
    .tool-page-header {
      padding: 0.875rem;
    }

    .tool-page-title {
      font-size: 1.25rem;
    }

    .tool-page-description {
      font-size: 0.8rem;
    }

    .tool-nav-list {
      gap: 0.15rem;
    }

    .breadcrumb-current {
      max-width: 150px;
    }
  }

  /* Prevenci√≥n de layout shift */
  @media (prefers-reduced-motion: no-preference) {
    .tool-nav-back,
    .tool-nav-arrow {
      transition: all 0.2s ease;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .tool-nav-back,
    .tool-nav-arrow {
      transition: none;
    }
  }

  /* Fix para evitar overflow horizontal */
  * {
    box-sizing: border-box;
  }
</style>
