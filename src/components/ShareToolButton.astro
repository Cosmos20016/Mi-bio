---
interface Props {
	toolName: string;
	toolDescription: string;
	toolUrl: string;
}

const { toolName, toolDescription, toolUrl } = Astro.props;
const uniqueId = `share-btn-${Math.random().toString(36).slice(2, 11)}`;
---

<div class="share-tool-button-wrapper">
  <button
    id={uniqueId}
    class="share-tool-button"
    aria-label="Compartir herramienta"
    data-tool-name={toolName}
    data-tool-description={toolDescription}
    data-tool-url={toolUrl}
  >
    <svg class="share-icon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="18" cy="5" r="3"></circle>
      <circle cx="6" cy="12" r="3"></circle>
      <circle cx="18" cy="19" r="3"></circle>
      <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line>
      <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line>
    </svg>
    <span>Compartir</span>
  </button>

  <div class="share-popup" id={`${uniqueId}-popup`} style="display: none;">
    <div class="share-popup-inner">
      <button class="share-option" data-platform="whatsapp" aria-label="Compartir en WhatsApp">
        <svg width="22" height="22" viewBox="0 0 24 24" fill="#25D366">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
        </svg>
        <span>WhatsApp</span>
      </button>

      <button class="share-option" data-platform="facebook" aria-label="Compartir en Facebook">
        <svg width="22" height="22" viewBox="0 0 24 24" fill="#1877F2">
          <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
        </svg>
        <span>Facebook</span>
      </button>

      <button class="share-option" data-platform="twitter" aria-label="Compartir en X (Twitter)">
        <svg width="22" height="22" viewBox="0 0 24 24" class="twitter-icon" fill="currentColor">
          <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
        </svg>
        <span>X (Twitter)</span>
      </button>

      <button class="share-option" data-platform="telegram" aria-label="Compartir en Telegram">
        <svg width="22" height="22" viewBox="0 0 24 24" fill="#0088cc">
          <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
        </svg>
        <span>Telegram</span>
      </button>

      <button class="share-option" data-platform="copy" aria-label="Copiar enlace">
        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" class="copy-icon" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
          <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
        </svg>
        <span class="copy-text">Copiar enlace</span>
      </button>
    </div>
  </div>
</div>

<script>
  // Wait for DOM to be ready and initialize on each page load (Swup compatibility)
  let shareAbortController: AbortController | null = null;

  function initShareButtons() {
    // Abort previous listeners
    if (shareAbortController) {
      shareAbortController.abort();
    }
    shareAbortController = new AbortController();
    const signal = shareAbortController.signal;
    
    const shareButtons = document.querySelectorAll('.share-tool-button');
    
    shareButtons.forEach((button) => {
      const buttonElement = button as HTMLButtonElement;
      const buttonId = buttonElement.id;
      const popup = document.getElementById(`${buttonId}-popup`);
      
      if (!popup) return;

      const toolName = buttonElement.dataset.toolName || '';
      const toolDescription = buttonElement.dataset.toolDescription || '';
      const toolUrl = buttonElement.dataset.toolUrl || '';
      
      // Generate absolute URL
      const absoluteUrl = `${window.location.origin}${toolUrl}`;
      const shareText = `Â¡Mira esta herramienta gratuita: ${toolName}! ${toolDescription} ðŸš€`;

      // Toggle popup
      const togglePopup = (e: Event) => {
        e.stopPropagation();
        const isVisible = popup.style.display === 'block';
        
        // Close all other popups first
        document.querySelectorAll('.share-popup').forEach(p => {
          (p as HTMLElement).style.display = 'none';
        });
        
        if (!isVisible) {
          popup.style.display = 'block';
          requestAnimationFrame(() => {
            popup.classList.add('share-popup-visible');
          });
        } else {
          popup.classList.remove('share-popup-visible');
          setTimeout(() => {
            popup.style.display = 'none';
          }, 200);
        }
      };

      // Check if Web Share API is available on mobile
      const isMobile = /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);
      const hasNativeShare = 'share' in navigator;

      // Handle button click
      buttonElement.addEventListener('click', async (e) => {
        // Use native share on mobile if available
        if (isMobile && hasNativeShare) {
          try {
            await navigator.share({
              title: toolName,
              text: shareText,
              url: absoluteUrl,
            });
            return;
          } catch (err) {
            // If user cancelled the native share dialog, just do nothing
            if (err instanceof DOMException && err.name === 'AbortError') {
              return;
            }
            // Only fall through to popup for real errors (not cancellations)
            console.log('Native share failed, falling back to popup:', err);
          }
        }
        
        // Show popup for desktop or if native share truly fails
        togglePopup(e);
      }, { signal });

      // Handle share options
      const shareOptions = popup.querySelectorAll('.share-option');
      shareOptions.forEach((option) => {
        option.addEventListener('click', async (e) => {
          e.stopPropagation();
          const platform = (option as HTMLElement).dataset.platform;
          
          let shareUrl = '';
          
          switch (platform) {
            case 'whatsapp':
              shareUrl = `https://wa.me/?text=${encodeURIComponent(`${shareText} ${absoluteUrl}`)}`;
              window.open(shareUrl, '_blank', 'noopener,noreferrer');
              break;
              
            case 'facebook':
              shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(absoluteUrl)}`;
              window.open(shareUrl, '_blank', 'noopener,noreferrer');
              break;
              
            case 'twitter':
              shareUrl = `https://twitter.com/intent/tweet?url=${encodeURIComponent(absoluteUrl)}&text=${encodeURIComponent(shareText)}`;
              window.open(shareUrl, '_blank', 'noopener,noreferrer');
              break;
              
            case 'telegram':
              shareUrl = `https://t.me/share/url?url=${encodeURIComponent(absoluteUrl)}&text=${encodeURIComponent(shareText)}`;
              window.open(shareUrl, '_blank', 'noopener,noreferrer');
              break;
              
            case 'copy':
              try {
                await navigator.clipboard.writeText(absoluteUrl);
                const copyText = option.querySelector('.copy-text');
                const copySvg = option.querySelector('svg');
                if (copyText && copySvg) {
                  const originalText = copyText.textContent;
                  const originalSvg = copySvg.outerHTML;
                  copyText.textContent = 'Â¡Copiado!';
                  // Green check icon for success feedback
                  copySvg.outerHTML = '<svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="#22c55e" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>';
                  // Subtle green background (hue 145 = green)
                  (option as HTMLElement).style.background = 'oklch(0.95 0.05 145)';
                  setTimeout(() => {
                    copyText.textContent = originalText;
                    const currentSvg = option.querySelector('svg');
                    if (currentSvg) {
                      currentSvg.outerHTML = originalSvg;
                    }
                    (option as HTMLElement).style.background = '';
                  }, 2000);
                }
              } catch (err) {
                console.error('Failed to copy:', err);
              }
              // Keep popup open after copying to show feedback to the user
              // NO cerrar el popup despuÃ©s de copiar, para que el usuario vea el feedback
              return;
          }
          
          // Close popup after sharing (except for copy)
          popup.classList.remove('share-popup-visible');
          setTimeout(() => {
            popup.style.display = 'none';
          }, 200);
        }, { signal });
      });
    });

    // Close popup when clicking outside
    document.addEventListener('click', (e) => {
      const target = e.target as HTMLElement;
      if (!target.closest('.share-tool-button-wrapper')) {
        document.querySelectorAll('.share-popup').forEach(popup => {
          popup.classList.remove('share-popup-visible');
          setTimeout(() => {
            (popup as HTMLElement).style.display = 'none';
          }, 200);
        });
      }
    }, { signal });
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initShareButtons);
  } else {
    initShareButtons();
  }

  // Re-initialize for Swup page transitions
  document.addEventListener('swup:page:view', initShareButtons);
  document.addEventListener('astro:page-load', initShareButtons);
</script>

<style>
  .share-tool-button-wrapper {
    position: relative;
    display: inline-flex;
  }

  .share-tool-button {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    padding: 0.3rem 0.65rem;
    border-radius: 9999px;
    background: oklch(0.93 0.04 var(--hue));
    color: oklch(0.45 0.14 var(--hue));
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  :global(.dark) .share-tool-button {
    background: oklch(0.3 0.05 var(--hue));
    color: oklch(0.82 0.12 var(--hue));
  }

  .share-tool-button:hover {
    background: oklch(0.88 0.06 var(--hue));
    color: oklch(0.45 0.16 var(--hue));
    transform: scale(1.05);
  }

  :global(.dark) .share-tool-button:hover {
    background: oklch(0.35 0.07 var(--hue));
    color: oklch(0.85 0.14 var(--hue));
  }

  .share-tool-button:active {
    transform: scale(0.95);
  }

  .share-icon {
    width: 14px;
    height: 14px;
  }

  .share-popup {
    position: absolute;
    top: calc(100% + 0.5rem);
    right: 0;
    min-width: 280px;
    background: oklch(0.99 0.005 var(--hue));
    border-radius: 1rem;
    padding: 0.75rem;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1), 0 2px 8px rgba(0, 0, 0, 0.06);
    z-index: 1000;
    opacity: 0;
    transform: translateY(-10px);
    transition: opacity 0.2s ease, transform 0.2s ease;
    pointer-events: none;
  }

  :global(.dark) .share-popup {
    background: oklch(0.19 0.015 var(--hue));
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.6), 0 0 0 1px rgba(255, 255, 255, 0.08);
  }

  .share-popup-visible {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  .share-popup-inner {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.5rem;
  }

  .share-option {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 0.75rem;
    border: none;
    border-radius: 0.75rem;
    background: oklch(0.96 0.01 var(--hue));
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: 0.75rem;
    font-weight: 600;
    color: #475569;
  }

  :global(.dark) .share-option {
    background: oklch(0.24 0.02 var(--hue));
    color: #cbd5e1;
  }

  .share-option:hover {
    background: oklch(0.92 0.02 var(--hue));
    transform: translateY(-2px);
  }

  :global(.dark) .share-option:hover {
    background: oklch(0.28 0.03 var(--hue));
  }

  .share-option:active {
    transform: translateY(0);
  }

  /* Social platform colors */
  .share-option[data-platform="whatsapp"] svg {
    color: #25D366;
  }

  .share-option[data-platform="facebook"] svg {
    color: #1877F2;
  }

  .twitter-icon {
    color: #14171A;
  }

  :global(.dark) .twitter-icon {
    color: #E7E9EA;
  }

  .share-option[data-platform="telegram"] svg {
    color: #0088cc;
  }

  .copy-icon {
    color: oklch(0.5 0.14 var(--hue));
  }

  :global(.dark) .copy-icon {
    color: oklch(0.75 0.12 var(--hue));
  }

  /* Mobile responsive */
  @media (max-width: 640px) {
    .share-popup {
      right: auto;
      left: 50%;
      transform: translateX(-50%) translateY(-10px);
      min-width: 260px;
    }

    .share-popup-visible {
      transform: translateX(-50%) translateY(0);
    }

    .share-tool-button {
      font-size: 0.7rem;
      padding: 0.25rem 0.55rem;
    }

    .share-icon {
      width: 12px;
      height: 12px;
    }
  }

  @media (min-width: 641px) {
    .share-popup-inner {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
